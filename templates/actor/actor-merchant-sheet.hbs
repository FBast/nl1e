<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

    {{!-- Sheet Header --}}
    <header class="sheet-header">

        <img class="profile" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>

        <div class="header-fields">

            <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>

            <div class="resources grid grid-2col">

                <div class="resource box flex-group-center">
                    <label class="resource-label">{{localize "PL1E.SellMultiplicator"}}</label>
                    <div class="form-group resource-content">
                        {{rangePicker name="system.sellMultiplicator" value=system.sellMultiplicator min=-100 max=0 step=10}}
                    </div>
                </div>
                <div class="resource box flex-group-center">
                    <label class="resource-label">{{localize "PL1E.BuyMultiplicator"}}</label>
                    <div class="form-group resource-content">
                        {{rangePicker name="system.buyMultiplicator" value=system.buyMultiplicator min=-50 max=50 step=10}}
                    </div>
                </div>

            </div>
        </div>
    </header>

    {{!-- Sheet Body --}}
    <section class="sheet-body">

        {{> "systems/pl1e/templates/actor/parts/merchant-items.hbs"}}

    </section>
</form>

