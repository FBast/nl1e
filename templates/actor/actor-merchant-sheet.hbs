<form class="pl1e {{cssClass}} {{actor.type}} flexcol" autocomplete="off">
    {{!-- Sheet Header --}}
    <header class="sheet-header">
        <img class="profile" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
        <div class="header-fields">
            <h1 class="sheet-name"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
            <div class="resources grid grid-2col">
                <div class="resource box flex-group-center">
                    <label class="resource-label">{{localize "PL1E.SellMultiplier"}}</label>
                    <div class="form-group resource-content">
                        {{rangePicker name="system.general.sellMultiplier" value=system.general.sellMultiplier min=0 max=100 step=10}}
                    </div>
                </div>
                <div class="resource box flex-group-center">
                    <label class="resource-label">{{localize "PL1E.BuyMultiplier"}}</label>
                    <div class="form-group resource-content">
                        {{rangePicker name="system.general.buyMultiplier" value=system.general.buyMultiplier min=0 max=200 step=10}}
                    </div>
                </div>
            </div>
        </div>
    </header>
    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        {{!-- Default tab is specified in actor-sheet.mjs --}}
        <a class="item" data-tab="items">{{localize "PL1E.Items"}}</a>
        <a class="item" data-tab="features">{{localize "PL1E.Features"}}</a>
        {{#if game.user.isGM}}<a class="item" data-tab="config">{{localize "PL1E.Configuration"}}</a>{{/if}}
    </nav>
    {{!-- Sheet Body --}}
    <section class="sheet-body">
        {{!-- Items Tab --}}
        <div class="tab items flexcol" data-group="primary" data-tab="items">
            {{> "systems/pl1e/templates/actor/parts/merchant-items.hbs"}}
        </div>
        {{!-- Features Tab --}}
        <div class="tab features flexcol" data-group="primary" data-tab="features">
            {{> "systems/pl1e/templates/actor/parts/merchant-features.hbs"}}
        </div>
        {{!-- Stats Tab --}}
        <div class="tab stats flexcol" data-group="primary" data-tab="config">
            {{> "systems/pl1e/templates/actor/parts/merchant-config.hbs"}}
        </div>
    </section>
</form>