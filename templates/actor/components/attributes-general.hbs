<fieldset>
    <legend class="section-header">{{localize "PL1E.Parameters"}}</legend>
    {{#if (eq actor.type "npc")}}
        <div class="form-group attribute">
            <select name="system.general.NPCTemplate">
                {{customSelectOptions (config "NPCTemplates") selected=system.general.NPCTemplate localize=true}}
            </select>
        </div>
    {{/if}}
    <div class="form-group">
        <label>{{localize "PL1E.Advantages"}}</label>
        <div class="form-fields">
            {{rangePicker name="system.general.advantages" value=system.general.advantages min=-2 max=2 step=1}}
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "PL1E.Experience"}}</label>
        <div class="form-fields">
            <div class="input-spin">
                <input type="number" step="1" min="0" max="60" name="system.general.experience"
                       value="{{system.general.experience}}" data-dtype="Number" {{#unless game.user.isTrusted}}disabled{{/unless}}/>
                <span>
                    <i class="spin-number hover-red fa fa-plus-square" data-path="system.general.experience" data-value="1" data-max="50"></i>
                    <i class="spin-number hover-red fa fa-minus-square" data-path="system.general.experience" data-value="-1" data-min="0"></i>
                </span>
            </div>
            <label>/</label>
            <input type="number" name="system.general.experienceNeeded"
                   value="{{system.general.experienceNeeded}}" data-dtype="Number" disabled/>
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "PL1E.RollBestSkill"}}</label>
        <div class="form-fields">
            <input type="checkbox" name="system.general.rollBestSkill" {{checked system.general.rollBestSkill}} data-dtype="Boolean" disabled/>
        </div>
    </div>
</fieldset>
<fieldset>
    <legend class="section-header">{{localize "PL1E.General"}}</legend>
    <div class="form-group">
        <label>{{localize "PL1E.Level"}}</label>
        <div class="form-fields">
            <label class="align-right">{{system.general.level}}</label>
            <progress id="file" max="100" value="{{system.general.levelProgression}}">{{system.general.levelProgression}}%</progress>
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "PL1E.RemainingCharacteristics"}}</label>
        <div class="form-fields">
            <label class="align-right">{{system.general.remainingCharacteristics}}</label>
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "PL1E.RemainingFeatures"}}</label>
        <div class="form-fields">
            <label class="align-right">{{system.general.remainingFeatures}}</label>
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "PL1E.RemainingFeaturePoints"}}</label>
        <div class="form-fields">
            <label class="align-right">{{system.general.remainingFeaturePoints}}</label>
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "PL1E.Ranks"}}</label>
        <div class="form-fields">
            <label class="align-right">{{system.general.ranks}}</label>
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "PL1E.MaxRank"}}</label>
        <div class="form-fields">
            {{#if (eq system.general.maxRank 1)}}
                <i class="far fa-circle-1 fa-lg align-right"></i>
            {{else if (eq system.general.maxRank 2)}}
                <i class="far fa-circle-2 fa-lg align-right"></i>
            {{else if (eq system.general.maxRank 3)}}
                <i class="far fa-circle-3 fa-lg align-right"></i>
            {{else if (eq system.general.maxRank 4)}}
                <i class="far fa-circle-4 fa-lg align-right"></i>
            {{else if (eq system.general.maxRank 5)}}
                <i class="far fa-circle-5 fa-lg align-right"></i>
            {{/if}}
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "PL1E.StatusImmunities"}}</label>
        <div class="form-fields">
            <ul class="align-right">
                {{#each system.general.statusImmunities}}
                    <li class="tag {{this}}">{{localize (config "statusImmunities" this)}}</li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "PL1E.Action"}}</label>
        <div class="form-fields">
            <label class="align-right">{{system.general.action}}</label>
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "PL1E.Reaction"}}</label>
        <div class="form-fields">
            <label class="align-right">{{system.general.reaction}}</label>
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "PL1E.QuickAction"}}</label>
        <div class="form-fields">
            <label class="align-right">{{system.general.quickAction}}</label>
        </div>
    </div>
</fieldset>