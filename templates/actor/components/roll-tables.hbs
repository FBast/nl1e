<ol class="items-list">
    <li class="item flexrow items-header grid grid-4col">
        <div class="item-name grid-span-3">{{localize "PL1E.RollTables"}}</div>
        <div class="item-controls">

        </div>
    </li>
    {{#each rollTables}}
        <li class="item" data-roll-table-id="{{_id}}">
            <div class="flexrow">
                <img class="item-image roll-table-edit hover-red" src="{{img}}" title="{{name}}" width="24" height="24"/>
                <label class="item-name item-tooltip-activate">{{name}}</label>
                <div class="item-icons">

                </div>
                <div class="item-controls">
                    {{#if @root.actor.isOwner}}
                        <a class="item-control roll-table-remove" data-tooltip='{{localize "PL1E.Delete"}}'><i class="fas fa-trash"></i></a>
                    {{/if}}
                </div>
            </div>
            <div class="item-tooltip">{{{system.description}}}</div>
        </li>
    {{/each}}
</ol>