<div class="vertical-content flex-shrink">
    <div class="main-panel">
        <h3 class="align-left">{{localize "PL1E.Resistances"}}</h3>
        <ul class="skills">
            <!-- Listing resistances -->
            {{#each system.skills}}
                {{#with (config "skills" @key)}}
                    {{#if fixedRank}}
                        <li class="skill" data-skill-id="{{@key}}">
                            <i class="skill-roll fas fa-dice-d{{../dice}} hover-action
                            {{#if (gt ../diceMod 0)}}color-green
                            {{else if (lt ../diceMod 0)}}color-red
                            {{else}}color-black{{/if}}">
                                <label class="{{#if (gt ../numberMod 0)}}color-green{{else if (lt ../numberMod 0)}}color-red
                                {{else}}color-black{{/if}}">{{../number}}</label>
                            </i>
                            <label class="skill-label highlight-link hover-info"
                                   data-attributes="{{weights.attributes}}" data-characteristics="{{weights.characteristics}}">
                                {{localize label}}
                            </label>
                            <div class="skill-rank">
                                {{#if ../implosion}}
                                    <i class="far fa-skull fa-lg hover-info" data-tooltip='{{localize "PL1E.Implosion"}}'></i>
                                {{/if}}
                                {{#if ../explosion}}
                                    <i class="far fa-burst fa-lg hover-info" data-tooltip='{{localize "PL1E.Explosion"}}'></i>
                                {{/if}}
                                {{#if (and (contains weights.misc "flexibility") (lt @root.system.misc.flexibility 0))}}
                                    <i class="far fa-weight-hanging fa-lg hover-info" data-tooltip='{{localize "PL1E.Overladen"}}'></i>
                                {{else if (not ../usable)}}
                                    <i class="far fa-ban fa-lg hover-info" data-tooltip='{{localize "PL1E.Unusable"}}'></i>
                                {{/if}}
                                <i class="far fa-circle-{{../rank}} fa-lg"></i>
                            </div>
                        </li>
                    {{/if}}
                {{/with}}
            {{/each}}
        </ul>
    </div>
    <div class="main-panel">
        <h3 class="align-left">{{localize "PL1E.Skills"}}</h3>
        <ul class="skills">
            <!-- Listing skills -->
            {{#each system.skills}}
                {{#with (config "skills" @key)}}
                    {{#unless fixedRank}}
                        <li class="skill flexrow" data-skill-id="{{@key}}">
                            <i class="skill-roll fas fa-dice-d{{../dice}} hover-action
                            {{#if (gt ../diceMod 0)}}color-green
                            {{else if (lt ../diceMod 0)}}color-red
                            {{else}}color-black{{/if}}">
                                <label class="{{#if (gt ../numberMod 0)}}color-green{{else if (lt ../numberMod 0)}}color-red
                                {{else}}color-black{{/if}}">{{../number}}</label>
                            </i>
                            <label class="skill-label highlight-link hover-info grid-span-3 align-left"
                                   data-attributes="{{weights.attributes}}" data-characteristics="{{weights.characteristics}}">
                                {{localize label}}
                            </label>
                            <div class="skill-rank align-right">
                                {{#if ../implosion}}
                                    <i class="far fa-skull fa-lg hover-info" data-tooltip='{{localize "PL1E.Implosion"}}'></i>
                                {{/if}}
                                {{#if ../explosion}}
                                    <i class="far fa-burst fa-lg hover-info" data-tooltip='{{localize "PL1E.Explosion"}}'></i>
                                {{/if}}
                                {{#if (and (contains weights.misc "flexibility") (lt @root.system.misc.flexibility 0))}}
                                    <i class="far fa-weight-hanging fa-lg hover-info" data-tooltip='{{localize "PL1E.Overladen"}}'></i>
                                {{else if (not ../usable)}}
                                    <i class="far fa-ban fa-lg hover-info" data-tooltip='{{localize "PL1E.Unusable"}}'></i>
                                {{/if}}
                                {{#if (and @root.system.general.creationMod (eq @root.actor.type "character"))}}
                                    <i class="rank-control fas fa-circle-{{../rank}} fa-lg hover-action" data-skill="{{@key}}"></i>
                                {{else}}
                                    <i class="far fa-circle-{{../rank}} fa-lg"></i>
                                {{/if}}
                            </div>
                        </li>
                    {{/unless}}
                {{/with}}
            {{/each}}
        </ul>
    </div>
</div>