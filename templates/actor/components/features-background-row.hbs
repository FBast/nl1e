<div class="main-panel">
    <div class="items-row">
        <!-- Container for the filters -->
        <div class="items-header grid grid-12col">
            <div class="item-title grid-span-4">
                <label class="item-name">{{localize "PL1E.Background"}}</label>
            </div>
            <!-- Horizontal filter list -->
            <div class="item-filter-list grid-span-8" data-filter="background">
                <div class="item-filter" data-filter="race">{{localize "PL1E.Race"}}</div>
                <div class="item-filter" data-filter="culture">{{localize "PL1E.Culture"}}</div>
                <div class="item-filter" data-filter="class">{{localize "PL1E.Class"}}</div>
                <div class="item-filter" data-filter="mastery">{{localize "PL1E.Mastery"}}</div>
            </div>
        </div>
        <!-- Content of the row -->
        <div class="items-row-content">
            {{#each background}}
                <div class="item" data-item-id="{{_id}}">
                    <img class="item-image item-edit hover-action" src="{{img}}" title="{{name}}" />
                    {{#if @root.actor.isOwner}}
                        {{#if flags.pl1e.childId}}
                            <a class="item-control item-link" data-tooltip='{{localize "PL1E.Link"}}'>
                                <i class="fas fa-link"></i>
                            </a>
                        {{else}}
                            <a class="item-control item-remove" data-tooltip='{{localize "PL1E.Delete"}}'>
                                <i class="fas fa-trash"></i>
                            </a>
                        {{/if}}
                        {{#if (gt (length warnings) 0)}}
                            <i class="item-info far fa-exclamation-triangle hover-info color-warning" data-tooltip="{{join warnings ', ' true}}"></i>
                        {{/if}}
                    {{/if}}
                </div>
            {{/each}}
        </div>
    </div>
</div>