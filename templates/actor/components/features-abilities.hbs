<ol class="items-list">
    {{#each abilities as |abilities level|}}
        <li class="item items-header flexrow">
            <div class="item-name">{{localize "PL1E.AbilitiesLevel"}} {{level}}</div>
        </li>
        {{#each abilities}}
            <li class="item" data-item-id="{{_id}}" data-item-link-id="{{flags.pl1e.childId}}">
                <div class="flexrow">
                    <img class="item-image item-edit hover-red" src="{{img}}" title="{{name}}" width="24" height="24"/>
                    <label class="item-name item-tooltip-activate">{{system.units}}x {{name}}</label>
                    <div class="item-icons grid-span-2">
                        {{#unless (eq @root.actor.type "npc")}}
                            {{#if (ne system.attributes.healthCost 0)}}
                                <i class="item-info far fa-heart hover-green" data-tooltip='{{localize "PL1E.HealthCost"}}'>
                                    <label>{{system.attributes.healthCost}}</label>
                                </i>
                            {{/if}}
                            {{#if (ne system.attributes.staminaCost 0)}}
                                <i class="item-info far fa-wave-pulse hover-green" data-tooltip="{{localize "PL1E.StaminaCost"}}">
                                    <label>{{system.attributes.staminaCost}}</label>
                                </i>
                            {{/if}}
                            {{#if (ne system.attributes.manaCost 0)}}
                                <i class="item-info far fa-sparkles hover-green" data-tooltip='{{localize "PL1E.ManaCost"}}'>
                                    <label>{{system.attributes.manaCost}}</label>
                                </i>
                            {{/if}}
                            {{#if (ne system.attributes.actionCost 0)}}
                                <i class="item-info far fa-clock hover-green" data-tooltip='{{localize "PL1E.ActionCost"}}'>
                                    <label>{{system.attributes.actionCost}}</label>
                                </i>
                            {{/if}}
                            {{#if (ne system.attributes.reactionCost 0)}}
                                <i class="item-info far fa-bell hover-green" data-tooltip='{{localize "PL1E.ReactionCost"}}'>
                                    <label>{{system.attributes.reactionCost}}</label>
                                </i>
                            {{/if}}
                            {{#if (ne system.attributes.instantCost 0)}}
                                <i class="item-info far fa-reply-clock hover-green" data-tooltip='{{localize "PL1E.InstantCost"}}'>
                                    <label>{{system.attributes.instantCost}}</label>
                                </i>
                            {{/if}}
                            {{#if system.attributes.isMajor}}
                                <i class="item-info fas fa-star hover-green" data-tooltip='{{localize "PL1E.IsMajor"}}'></i>
                            {{/if}}
                            {{#if (eq system.attributes.weaponLink "melee")}}
                                <i class="item-info fas fa-sword hover-green" data-tooltip='{{localize "PL1E.Melee"}}'></i>
                            {{else if (eq system.attributes.weaponLink "ranged")}}
                                <i class="item-info fas fa-bow-arrow hover-green" data-tooltip='{{localize "PL1E.Ranged"}}'></i>
                            {{else if (eq system.attributes.weaponLink "special")}}
                                <i class="item-info fas wand-sparkles hover-green" data-tooltip='{{localize "PL1E.Special"}}'></i>
                            {{/if}}
                            {{#if (or (eq system.attributes.weaponLink "none") (eq system.attributes.weaponLink "special"))}}
                                {{#if (ne system.attributes.range 0)}}
                                    <i class="item-info fas fa-bullseye hover-green" data-tooltip='{{localize "PL1E.Range"}}'>
                                        <label>{{system.attributes.range}}</label>
                                    </i>
                                {{/if}}
                                {{#if (eq system.attributes.areaShape "self")}}
                                    <i class="item-info fas fa-person hover-green" data-tooltip='{{localize "PL1E.Self"}}'></i>
                                {{else if (eq system.attributes.areaShape "target")}}
                                    <i class="item-info fas fa-crosshairs-simple hover-green" data-tooltip='{{localize "PL1E.Target"}}'>
                                        <label>{{#if (eq system.attributes.areaNumberResolutionType "multiplyBySuccess")}}X{{/if}}
                                            {{system.attributes.areaNumber}}</label>
                                    </i>
                                {{else if (eq system.attributes.areaShape "circle")}}
                                    <i class="item-info fas fa-circle-xmark hover-green" data-tooltip='{{localize "PL1E.Circle"}}'>
                                        <label>{{#if (eq system.attributes.areaNumberResolutionType "multiplyBySuccess")}}X{{/if}}
                                            {{system.attributes.areaNumber}}</label>
                                    </i>
                                {{else if (eq system.attributes.areaShape "cone")}}
                                    <i class="item-info fas fa-triangle hover-green" data-tooltip='{{localize "PL1E.Cone"}}'>
                                        <label>{{#if (eq system.attributes.areaNumberResolutionType "multiplyBySuccess")}}X{{/if}}
                                            {{system.attributes.areaNumber}}</label>
                                    </i>
                                {{else if (eq system.attributes.areaShape "square")}}
                                    <i class="item-info fas fa-square hover-green" data-tooltip='{{localize "PL1E.Square"}}'>
                                        <label>{{#if (eq system.attributes.areaNumberResolutionType "multiplyBySuccess")}}X{{/if}}
                                            {{system.attributes.areaNumber}}</label>
                                    </i>
                                {{else if (eq system.attributes.areaShape "ray")}}
                                    <i class="item-info fas fa-rectangle-vertical hover-green" data-tooltip='{{localize "PL1E.Ray"}}'>
                                        <label>{{#if (eq system.attributes.areaNumberResolutionType "multiplyBySuccess")}}x{{/if}}
                                            {{system.attributes.areaNumber}}</label>
                                    </i>
                                {{/if}}
                            {{/if}}
                        {{/unless}}
                    </div>
                    <div class="item-controls">
                        {{#if (or (eq @root.actor.type "character") (eq @root.actor.type "npc"))}}
                            {{#if system.isMemorized}}
                                <a class="item-control item-use" data-tooltip='{{localize "PL1E.Use"}}'><i class="fas fa-dice-d20"></i></a>
                            {{/if}}
                            {{#if @root.system.general.creationMod}}
                                <a class="item-control {{#unless system.isMemorized}}color-grey{{/unless}} item-toggle" data-tooltip='{{localize "PL1E.Memorize"}}'>
                                    <i class="fas fa-book"></i>
                                </a>
                            {{/if}}
                        {{/if}}
                        {{#if @root.actor.isOwner}}
                            {{#if (eq flags.pl1e.childId undefined)}}
                                <a class="item-control item-remove" data-tooltip='{{localize "PL1E.Delete"}}'><i class="fas fa-trash"></i></a>
                            {{else}}
                                <a class="item-control item-link" data-tooltip='{{localize "PL1E.Link"}}'><i class="fas fa-link"></i></a>
                            {{/if}}
                        {{/if}}
                    </div>
                </div>
                <div class="item-tooltip">{{{system.description}}}</div>
            </li>
        {{/each}}
    {{/each}}
</ol>