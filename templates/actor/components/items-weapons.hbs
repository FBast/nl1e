<ol class="items-list">
    <li class="items-header flexrow">
        <div class="item-name">{{localize "PL1E.Weapon"}}</div>
    </li>
    {{#each weapons}}
        <li class="item" data-item-id="{{_id}}" data-item-link-id="{{flags.pl1e.childId}}">
            <div class="flexrow">
                <img class="item-image item-edit hover-red" src="{{img}}" title="{{name}}" width="24" height="24"/>
                <label class="item-name item-tooltip-activate">{{name}}</label>
                <div class="item-icons grid-span-2">
                    {{#unless (eq @root.actor.type "npc")}}
                        {{#if (ne system.attributes.hands 0)}}
                            <i class="item-info fas fa-hand hover-green" data-tooltip="{{localize "PL1E.Hands"}}">
                                <label>{{system.attributes.hands}}</label>
                            </i>
                        {{/if}}
                        {{#if system.attributes.melee}}
                            <i class="item-info fas fa-sword hover-green" data-tooltip="{{localize "PL1E.Reach"}}">
                                <label>{{system.attributes.reach}}</label>
                            </i>
                        {{/if}}
                        {{#if system.attributes.ranged}}
                            <i class="item-info fas fa-bow-arrow hover-green" data-tooltip="{{localize "PL1E.Range"}}">
                                <label>{{system.attributes.range}}</label>
                            </i>
                            {{#if (gt system.attributes.ammo 0)}}
                                <i class="item-info fas fa-tally hover-green" data-tooltip="{{localize "PL1E.Ammo"}}">
                                    <label>{{system.attributes.ammo}}</label>
                                </i>
                            {{/if}}
                        {{/if}}
                        {{#each system.activeAspects}}
                            {{#if (eq damageType "raw")}}
                                {{#with (configEntry dataGroup data)}}
                                    <i class="item-info fas {{icon}} hover-green" data-tooltip="{{localize label}}">
                                        <label>{{../value}}</label>
                                    </i>
                                {{/with}}
                            {{else}}
                                {{#with (configEntry "reductions" damageType)}}
                                    <i class="item-info fas {{icon}} hover-green" data-tooltip="{{localize (configEntry "damageTypes" ../damageType)}}">
                                        <label>{{../value}}</label>
                                    </i>
                                {{/with}}
                            {{/if}}
                        {{/each}}
                    {{/unless}}
                    {{#if (eq @root.actor.type "character")}}
                        {{#if system.isMajorActionUsed}}
                            <i class="item-info far fa-star hover-green" data-tooltip="{{localize "PL1E.MajorActionUsed"}}"></i>
                        {{/if}}
                        {{#if (gt system.price.gold 0)}}
                            <i class="item-info fas fa-coins color-gold hover-green" data-tooltip="{{localize "PL1E.Gold"}}">
                                <label class="color-black">{{system.price.gold}}</label>
                            </i>
                        {{/if}}
                        {{#if (gt system.price.silver 0)}}
                            <i class="item-info fas fa-coins color-silver hover-green" data-tooltip="{{localize "PL1E.Silver"}}">
                                <label class="color-black">{{system.price.silver}}</label>
                            </i>
                        {{/if}}
                        {{#if (gt system.price.copper 0)}}
                            <i class="item-info fas fa-coins color-copper hover-green" data-tooltip="{{localize "PL1E.Copper"}}">
                                <label class="color-black">{{system.price.copper}}</label>
                            </i>
                        {{/if}}
                    {{else if (eq @root.actor.type "merchant")}}
                        {{#with (lookup ../system.merchantPrices _id)}}
                            {{#if (gt gold 0)}}
                                <i class="item-info fas fa-coins color-gold hover-green" data-tooltip="{{localize "PL1E.Gold"}}">
                                    <label class="color-black">{{gold}}</label>
                                </i>
                            {{/if}}
                            {{#if (gt silver 0)}}
                                <i class="item-info fas fa-coins color-silver hover-green" data-tooltip="{{localize "PL1E.Silver"}}">
                                    <label class="color-black">{{silver}}</label>
                                </i>
                            {{/if}}
                            {{#if (gt copper 0)}}
                                <i class="item-info fas fa-coins color-copper hover-green" data-tooltip="{{localize "PL1E.Copper"}}">
                                    <label class="color-black">{{copper}}</label>
                                </i>
                            {{/if}}
                        {{/with}}
                    {{/if}}
                </div>
                <div class="item-controls">
                    {{#if (eq @root.actor.type "merchant")}}
                        <a class="item-control item-buy" data-tooltip='{{localize "PL1E.Buy"}}'>
                            <i class="fas fa-coins"></i>
                        </a>
                    {{else if (or (eq @root.actor.type "character") (eq @root.actor.type "npc"))}}
                        {{#if (gt system.attributes.hands 0)}}
                            <a class="item-control item-toggle" data-main='false' data-tooltip='{{localize "PL1E.EquipSecondary"}}'>
                                <i class="fas fa-hand icon-flipped {{#unless system.isEquippedSecondary}}color-grey{{/unless}}"></i>
                            </a>
                            <a class="item-control item-toggle" data-main='true' data-tooltip='{{localize "PL1E.EquipMain"}}'>
                                <i class="fas fa-hand {{#unless system.isEquippedMain}}color-grey{{/unless}}"></i>
                            </a>
                        {{/if}}
                    {{/if}}
                    {{#if @root.actor.isOwner}}
                        {{#if (eq flags.pl1e.childId undefined)}}
                            <a class="item-control item-remove" data-tooltip='{{localize "PL1E.Delete"}}'><i class="fas fa-trash"></i></a>
                        {{else}}
                            <a class="item-control item-link" data-tooltip='{{localize "PL1E.Link"}}'><i class="fas fa-link"></i></a>
                        {{/if}}
                    {{/if}}
                </div>
            </div>
            <div class="item-tooltip">{{{system.description}}}</div>
        </li>
    {{/each}}
</ol>