<ol class="items-list">
    <li class="item flexrow items-header">
        <div class="item-name">{{localize "PL1E.Consumable"}}</div>
    </li>
    {{#each consumables}}
        <li class="item" data-item-id="{{_id}}" data-item-link-id="{{flags.pl1e.childId}}">
            <div class="flexrow">
                <img class="item-image item-edit hover-red" src="{{img}}" title="{{name}}" width="24" height="24"/>
                <label class="item-name item-tooltip-activate">{{system.units}}x {{name}}</label>
                <div class="item-stats">
                    {{#unless (eq @root.actor.type "npc")}}
                        {{#if (ne system.attributes.healthRecovery 0)}}
                            <i class="item-info fas fa-heart hover-green" data-tooltip='{{localize "PL1E.HealthRecovery"}}'>
                                <label>{{system.attributes.healthRecovery.value}}</label>
                            </i>
                        {{/if}}
                        {{#if (ne system.attributes.staminaRecovery 0)}}
                            <i class="item-info fas fa-wave-pulse hover-green" data-tooltip='{{localize "PL1E.StaminaRecovery"}}'>
                                <label>{{system.attributes.staminaRecovery.value}}</label>
                            </i>
                        {{/if}}
                        {{#if (ne system.attributes.manaRecovery 0)}}
                            <i class="item-info fas fa-sparkles hover-green" data-tooltip='{{localize "PL1E.ManaRecovery"}}'>
                                <label>{{system.attributes.manaRecovery.value}}</label>
                            </i>
                        {{/if}}
                        {{#if (gt system.attributes.uses.value 1)}}
                            {{#if (eq system.removedUses 0)}}
                                <i class="item-info fas fa-hourglass-start hover-green" data-tooltip='{{localize "PL1E.Uses"}}'>
                                    <label>{{minus system.attributes.uses.value system.removedUses}}</label>
                                </i>
                            {{else if (eq system.removedUses system.attributes.uses.value)}}
                                <i class="item-info fas fa-hourglass-end hover-green" data-tooltip='{{localize "PL1E.Uses"}}'>
                                    <label>{{minus system.attributes.uses.value system.removedUses}}</label>
                                </i>
                            {{else}}
                                <i class="item-info fas fa-hourglass-half hover-green" data-tooltip='{{localize "PL1E.Uses"}}'>
                                    <label>{{minus system.attributes.uses.value system.removedUses}}</label>
                                </i>
                            {{/if}}
                        {{/if}}
                        {{#if system.attributes.isReloadable.value}}
                            <i class="item-info fas fa-repeat hover-green" data-tooltip='{{localize "PL1E.Reloadable"}}'></i>
                        {{/if}}
                    {{/unless}}
                    {{#if (eq @root.actor.type "character")}}
                        {{#if (gt system.price.gold 0)}}
                            <i class="item-info fas fa-coins color-gold hover-green" data-tooltip='{{localize "PL1E.Gold"}}'>
                                <label class="color-black">{{system.price.gold}}</label>
                            </i>
                        {{/if}}
                        {{#if (gt system.price.silver 0)}}
                            <i class="item-info fas fa-coins color-silver hover-green" data-tooltip='{{localize "PL1E.Silver"}}'>
                                <label class="color-black">{{system.price.silver}}</label>
                            </i>
                        {{/if}}
                        {{#if (gt system.price.copper 0)}}
                            <i class="item-info fas fa-coins color-copper hover-green" data-tooltip='{{localize "PL1E.Copper"}}'>
                                <label class="color-black">{{system.price.copper}}</label>
                            </i>
                        {{/if}}
                    {{else if (eq @root.actor.type "merchant")}}
                        {{#with (lookup ../system.merchantPrices _id)}}
                            {{#if (gt gold 0)}}
                                <i class="item-info fas fa-coins color-gold hover-green" data-tooltip='{{localize "PL1E.Gold"}}'>
                                    <label class="color-black">{{gold}}</label>
                                </i>
                            {{/if}}
                            {{#if (gt silver 0)}}
                                <i class="item-info fas fa-coins color-silver hover-green" data-tooltip='{{localize "PL1E.Silver"}}'>
                                    <label class="color-black">{{silver}}</label>
                                </i>
                            {{/if}}
                            {{#if (gt copper 0)}}
                                <i class="item-info fas fa-coins color-copper hover-green" data-tooltip='{{localize "PL1E.Copper"}}'>
                                    <label class="color-black">{{copper}}</label>
                                </i>
                            {{/if}}
                        {{/with}}
                    {{/if}}
                </div>
                <div class="item-controls">
                    {{#if (eq @root.actor.type "merchant")}}
                        <a class="item-control item-buy" data-tooltip='{{localize "PL1E.Buy"}}'>
                            <i class="fas fa-coins"></i>
                        </a>
                    {{else if (or (eq @root.actor.type "character") (eq @root.actor.type "npc"))}}
                        {{#if (and (eq system.attributes.uses.value system.removedUses) (system.attributes.isReloadable.value))}}
                            <a class="item-control consumable-reload" data-tooltip='{{localize "PL1E.Reload"}}'>
                                <i class="fas fa-repeat"></i>
                            </a>
                        {{/if}}
                        {{#if (ne system.attributes.uses.value system.removedUses)}}
                            <a class="item-control item-use" data-tooltip='{{localize "PL1E.Use"}}'>
                                <i class="fas fa-dice-d20"></i>
                            </a>
                        {{/if}}
                    {{/if}}
                    {{#if @root.actor.isOwner}}
                        {{#if (eq flags.pl1e.childId undefined)}}
                            <a class="item-control item-remove" data-tooltip='{{localize "PL1E.Delete"}}'><i class="fas fa-trash"></i></a>
                        {{else}}
                            <a class="item-control item-link" data-tooltip='{{localize "PL1E.Link"}}'><i class="fas fa-link"></i></a>
                        {{/if}}
                    {{/if}}
                </div>
            </div>
            <div class="item-tooltip">{{{system.description}}}</div>
        </li>
    {{/each}}
</ol>