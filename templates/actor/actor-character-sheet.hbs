<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">

    <img class="profile" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>

    <div class="header-fields">

      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>

      <div class="resources grid grid-3col">

        <div class="resource flex-group-center">
          <label for="system.resources.health.value" class="resource-label">{{localize "PL1E.Health"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="number" name="system.resources.health.value" value="{{system.resources.health.value}}" data-dtype="Number"/>
            <span> / </span>
            <input type="number" name="system.resources.health.max" value="{{system.resources.health.max}}" data-dtype="Number"/>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.resources.stamina.value" class="resource-label">{{localize "PL1E.Stamina"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="number" name="system.resources.stamina.value" value="{{system.resources.stamina.value}}" data-dtype="Number"/>
            <span> / </span>
            <input type="number" name="system.resources.stamina.max" value="{{system.resources.stamina.max}}" data-dtype="Number"/>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.resources.mana.value" class="resource-label">{{localize "PL1E.Mana"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="number" name="system.resources.mana.value" value="{{system.resources.mana.value}}" data-dtype="Number"/>
            <span> / </span>
            <input type="number" name="system.resources.mana.max" value="{{system.resources.mana.max}}" data-dtype="Number"/>
          </div>
        </div>

      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="stats">{{localize "PL1E.Stats"}}</a>
    <a class="item" data-tab="features">{{localize "PL1E.Features"}}</a>
    <a class="item" data-tab="items">{{localize "PL1E.Items"}}</a>
    <a class="item" data-tab="effects">{{localize "PL1E.Effects"}}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Stats Tab --}}
    <div class="tab stats flexcol" data-group="primary" data-tab="stats">
      {{> "systems/pl1e/templates/actor/parts/actor-stats.hbs"}}
    </div>

    {{!-- Features Tab --}}
    <div class="tab features flexcol" data-group="primary" data-tab="features">
      {{> "systems/pl1e/templates/actor/parts/actor-features.hbs"}}
    </div>

    {{!-- Items Tab --}}
    <div class="tab items flexcol" data-group="primary" data-tab="items">
       {{> "systems/pl1e/templates/actor/parts/actor-items.hbs"}}
    </div>

    {{!-- Active Effects Tab --}}
    <div class="tab effects flexcol" data-group="primary" data-tab="effects">
      {{> "systems/pl1e/templates/actor/parts/actor-effects.hbs"}}
    </div>

    {{!-- If you want TinyMCE editors to output inline rolls when rendered, you need to pass the actor's roll data to the rollData property. --}}
    {{!-- editor system.skills target="system.skills" rollData=rollData button=true owner=owner editable=editable --}}

  </section>
</form>

