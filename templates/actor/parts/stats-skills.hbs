<div class="flex-vertical gap-md">
    <ul class="skills">
        <!-- Listing resistances -->
        {{#each system.skills}}
            {{#with (config "skills" @key)}}
                {{#if fixedRank}}
                    <li class="skill" data-skill-id="{{@key}}">
                        <span class="skill-roll">
                            <label class="skill-number {{#if (gt ../numberMod 0)}}color-bonus{{else if (lt ../numberMod 0)}}color-malus
                                {{else}}color-black{{/if}}">{{../number}}</label>
                            <i class="hover-action fas fa-dice-d{{../dice}}
                                {{#if (gt ../diceMod 0)}}color-bonus
                            {{else if (lt ../diceMod 0)}}color-malus
                            {{else}}color-black{{/if}}"></i>
                        </span>
                        <label class="skill-label highlight-link hover-info" data-attributes="{{weights.attributes}}"
                               data-characteristics="{{weights.characteristics}}">
                            {{localize label}}
                        </label>
                        <div class="skill-rank">
                            {{#if ../implosion}}
                                <i class="far fa-skull hover-info"
                                   data-tooltip='{{localize "PL1E.Implosion"}}'></i>
                            {{/if}}
                            {{#if ../explosion}}
                                <i class="far fa-burst hover-info"
                                   data-tooltip='{{localize "PL1E.Explosion"}}'></i>
                            {{/if}}
                            {{#if (and (contains weights.misc "flexibility") (lt @root.system.misc.flexibility 0))}}
                                <i class="far fa-weight-hanging hover-info"
                                   data-tooltip='{{localize "PL1E.Overladen"}}'></i>
                            {{else if (not ../usable)}}
                                <i class="far fa-ban hover-info" data-tooltip='{{localize "PL1E.Unusable"}}'></i>
                            {{/if}}
                            <i class="far fa-circle-{{../rank}}"></i>
                        </div>
                    </li>
                {{/if}}
            {{/with}}
        {{/each}}
    </ul>
    <ul class="skills">
        <!-- Listing skills -->
        {{#each system.skills}}
            {{#with (config "skills" @key)}}
                {{#unless fixedRank}}
                    <li class="skill" data-skill-id="{{@key}}">
                        <span class="skill-roll hover-action">
                            <label class="skill-number {{#if (gt ../numberMod 0)}}color-bonus{{else if (lt ../numberMod 0)}}color-malus
                                {{else}}color-black{{/if}}">{{../number}}</label>
                            <i class="skill-dice fas fa-dice-d{{../dice}}
                                {{#if (gt ../diceMod 0)}}color-bonus
                            {{else if (lt ../diceMod 0)}}color-malus
                            {{else}}color-black{{/if}}"></i>
                        </span>
                        <label class="skill-label highlight-link hover-info"
                               data-attributes="{{weights.attributes}}" data-characteristics="{{weights.characteristics}}">
                            {{localize label}}
                        </label>
                        <div class="skill-rank align-right">
                            {{#if ../implosion}}
                                <i class="far fa-skull hover-info" data-tooltip='{{localize "PL1E.Implosion"}}'></i>
                            {{/if}}
                            {{#if ../explosion}}
                                <i class="far fa-burst hover-info" data-tooltip='{{localize "PL1E.Explosion"}}'></i>
                            {{/if}}
                            {{#if (and (contains weights.misc "flexibility") (lt @root.system.misc.flexibility 0))}}
                                <i class="far fa-weight-hanging hover-info"
                                   data-tooltip='{{localize "PL1E.Overladen"}}'></i>
                            {{else if (not ../usable)}}
                                <i class="far fa-ban hover-info" data-tooltip='{{localize "PL1E.Unusable"}}'></i>
                            {{/if}}
                            {{#if (and @root.system.general.creationMod (eq @root.actor.type "character"))}}
                                <i class="rank-control fas fa-circle-{{../rank}} hover-action"
                                   data-skill="{{@key}}"></i>
                            {{else}}
                                <i class="far fa-circle-{{../rank}}"></i>
                            {{/if}}
                        </div>
                    </li>
                {{/unless}}
            {{/with}}
        {{/each}}
    </ul>
</div>