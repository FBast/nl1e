<div class="list-items">
    <div class="list-header">
        <h4>{{localize "PL1E.RollTables"}}</h4>
    </div>
    <div class="list-column">
        {{#each rollTables}}
            <div class="item" data-roll-table-id="{{_id}}">
                <div class="item-content">
                    <div class="title">
                        <img class="roll-table-edit hover-action" src="{{img}}" title="{{name}}" width="24" height="24"/>
                        <label class="item-tooltip-activate hover-info">{{name}}</label>
                    </div>
                    <div class="fields">
                        {{#if @root.actor.isOwner}}
                            <a class="roll-table-remove hover-action" data-tooltip='{{localize "PL1E.Delete"}}'>
                                <i class="fas fa-trash"></i>
                            </a>
                        {{/if}}
                    </div>
                </div>
                <div class="item-tooltip">{{{system.description}}}</div>
            </div>
        {{/each}}
    </div>
</div>
