<section class="scroll-hidden grid grid-5col">
    <!-- Left column : Listing characteristics -->
    <div class="characteristics">
        {{#each system.characteristics as |characteristic key|}}
            <div class="characteristic flex-group-center">
                <h3 class="characteristic-label align-left">{{characteristic.label}}</h3>
                <div class="characteristic-values flexrow flex-group-center">
                    <input type="number" min="{{characteristic.min}}" max="{{characteristic.max}}"
                           name="system.characteristics.{{key}}.base" value="{{characteristic.base}}"
                           data-dtype="Number"/>
                    <span class="characteristic-mod">{{numberFormat characteristic.mod decimals=0 sign=true}}</span>
                </div>
            </div>
        {{/each}}
    </div>
    <!-- Middle column -->
    <div class="grid-span-2">
        <ul class="skills box">
            <!-- Listing resistances -->
            {{#each system.defenses as |defense key|}}
                <li class="skill grid grid-5col">
                    <label class="skill-label grid-span-2 rollable align-left" for="{{defense.label}}"
                           data-roll="{{defense.number}}d{{defense.dice}}xo{{defense.dice}}cs>=4"
                           data-label="{{defense.label}}">{{defense.label}} </label>
                    <label class="skill-roll align-center">({{defense.number}}D{{defense.dice}})</label>
                    <div class="skill-masteries grid-span-2 align-center">
                        <input type="radio" name="system.defenses.{{key}}.mastery" class="mastery-1" value="1"
                               data-dtype="Number" {{checked (eq defense.mastery 1)}} {{disabled
                                (ne defense.mastery 1)}}/>
                        <input type="radio" name="system.defenses.{{key}}.mastery" class="mastery-2" value="2"
                               data-dtype="Number" {{checked (eq defense.mastery 2)}} {{disabled
                                (ne defense.mastery 2)}}/>
                        <input type="radio" name="system.defenses.{{key}}.mastery" class="mastery-3" value="3"
                               data-dtype="Number" {{checked (eq defense.mastery 3)}} {{disabled
                                (ne defense.mastery 3)}}/>
                        <input type="radio" name="system.defenses.{{key}}.mastery" class="mastery-4" value="4"
                               data-dtype="Number" {{checked (eq defense.mastery 4)}} {{disabled
                                (ne defense.mastery 4)}}/>
                        <input type="radio" name="system.defenses.{{key}}.mastery" class="mastery-5" value="5"
                               data-dtype="Number" {{checked (eq defense.mastery 5)}} {{disabled
                                (ne defense.mastery 5)}}/>
                    </div>
                </li>
            {{/each}}
            <hr>
            <!-- Listing defenses -->
            {{#each system.resistances as |resistance key|}}
                <li class="skill grid grid-5col">
                    <label class="skill-label grid-span-2 rollable align-left" for="{{resistance.label}}"
                           data-roll="{{resistance.number}}d{{resistance.dice}}xo{{resistance.dice}}cs>=4"
                           data-label="{{resistance.label}}">{{resistance.label}} </label>
                    <label class="skill-roll align-center">({{resistance.number}}D{{resistance.dice}})</label>
                    <div class="skill-masteries grid-span-2 align-center">
                        <input type="radio" name="system.resistances.{{key}}.mastery" class="mastery-1" value="1"
                               data-dtype="Number" {{checked (eq resistance.mastery 1)}} {{disabled
                                (ne resistance.mastery 1)}}/>
                        <input type="radio" name="system.resistances.{{key}}.mastery" class="mastery-2" value="2"
                               data-dtype="Number" {{checked (eq resistance.mastery 2)}} {{disabled
                                (ne resistance.mastery 2)}}/>
                        <input type="radio" name="system.resistances.{{key}}.mastery" class="mastery-3" value="3"
                               data-dtype="Number" {{checked (eq resistance.mastery 3)}} {{disabled
                                (ne resistance.mastery 3)}}/>
                        <input type="radio" name="system.resistances.{{key}}.mastery" class="mastery-4" value="4"
                               data-dtype="Number" {{checked (eq resistance.mastery 4)}} {{disabled
                                (ne resistance.mastery 4)}}/>
                        <input type="radio" name="system.resistances.{{key}}.mastery" class="mastery-5" value="5"
                               data-dtype="Number" {{checked (eq resistance.mastery 5)}} {{disabled
                                (ne resistance.mastery 5)}}/>
                    </div>
                </li>
            {{/each}}
            <hr>
            <!-- Listing skills -->
            {{#each system.skills as |skill key|}}
                <li class="skill grid grid-5col">
                    <label class="skill-label grid-span-2 rollable align-left" for="{{skill.label}}"
                           data-roll="{{skill.number}}d{{skill.dice}}xo{{skill.dice}}cs>=4"
                           data-label="{{skill.label}}">{{skill.label}} </label>
                    <label class="skill-roll align-center">({{skill.number}}D{{skill.dice}})</label>
                    <div class="skill-masteries grid-span-2 align-center">
                        <input type="radio" name="system.skills.{{key}}.mastery" class="mastery-1" value="1"
                               data-dtype="Number" {{checked (eq skill.mastery 1)}} />
                        <input type="radio" name="system.skills.{{key}}.mastery" class="mastery-2" value="2"
                               data-dtype="Number" {{checked (eq skill.mastery 2)}} />
                        <input type="radio" name="system.skills.{{key}}.mastery" class="mastery-3" value="3"
                               data-dtype="Number" {{checked (eq skill.mastery 3)}} />
                        <input type="radio" name="system.skills.{{key}}.mastery" class="mastery-4" value="4"
                               data-dtype="Number" {{checked (eq skill.mastery 4)}} />
                        <input type="radio" name="system.skills.{{key}}.mastery" class="mastery-5" value="5"
                               data-dtype="Number" {{checked (eq skill.mastery 5)}} />
                    </div>
                </li>
                {{#if skill.separator}}
                    <hr>
                {{/if}}
            {{/each}}
        </ul>
    </div>
    <!-- Right column -->
    <div class="attributes scroll-auto grid-span-2">
        <div class="form-group">
            <label>Experience</label>
            <input type="number" step="1" min="0" max="60" name="system.attributes.experience"
                   value="{{system.attributes.experience}}" data-dtype="Number"/>
        </div>
        <div class="form-group">
            <label>{{localize "PL1E.Bonuses"}}</label>
            <div class="attribute-mods grid-span-2 align-center">
                <input type="radio" name="system.attributes.bonuses" class="mod-1" value="-2"
                       data-dtype="Number" {{checked (eq system.attributes.bonuses -2)}}/>
                <input type="radio" name="system.attributes.bonuses" class="mod-2" value="-1"
                       data-dtype="Number" {{checked (eq system.attributes.bonuses -1)}}/>
                <input type="radio" name="system.attributes.bonuses" class="mod-3" value="0"
                       data-dtype="Number" {{checked (eq system.attributes.bonuses 0)}}/>
                <input type="radio" name="system.attributes.bonuses" class="mod-4" value="1"
                       data-dtype="Number" {{checked (eq system.attributes.bonuses 1)}}/>
                <input type="radio" name="system.attributes.bonuses" class="mod-5" value="2"
                       data-dtype="Number" {{checked (eq system.attributes.bonuses 2)}}/>
            </div>
        </div>
        <div class="form-group">
            <label>{{localize "PL1E.Advantages"}}</label>
            <div class="attribute-mods grid-span-2 align-center">
                <input type="radio" name="system.attributes.advantages" class="mod-1" value="-2"
                       data-dtype="Number" {{checked (eq system.attributes.advantages -2)}}/>
                <input type="radio" name="system.attributes.advantages" class="mod-2" value="-1"
                       data-dtype="Number" {{checked (eq system.attributes.advantages -1)}}/>
                <input type="radio" name="system.attributes.advantages" class="mod-3" value="0"
                       data-dtype="Number" {{checked (eq system.attributes.advantages 0)}}/>
                <input type="radio" name="system.attributes.advantages" class="mod-4" value="1"
                       data-dtype="Number" {{checked (eq system.attributes.bonuses 1)}}/>
                <input type="radio" name="system.attributes.advantages" class="mod-5" value="2"
                       data-dtype="Number" {{checked (eq system.attributes.bonuses 2)}}/>
            </div>
        </div>
        <div class="form-group">
            <label>{{localize "PL1E.Size"}}</label>
            <label class="align-right">{{localize system.attributes.sizeLabel}}</label>
        </div>
        <div class="form-group">
            <label>{{localize "PL1E.Speed"}}</label>
            <label class="align-right">{{system.attributes.speed}}</label>
        </div>
        <div class="form-group">
            <label>{{localize "PL1E.Initiative"}}</label>
            <label class="align-right">{{system.attributes.initiative}}</label>
        </div>
        <div class="form-group">
            <label>{{localize "PL1E.DodgeBonus"}}</label>
            <label class="align-right">{{system.attributes.dodgeBonus}}</label>
        </div>
        <div class="form-group">
            <label>{{localize "PL1E.ParryBonus"}}</label>
            <label class="align-right">{{system.attributes.parryBonus}}</label>
        </div>
        <div class="form-group">
            <label>{{localize "PL1E.NightVision"}}</label>
            <label class="align-right">{{system.attributes.nightVision}}</label>
        </div>
        <hr>
        <div class="form-group">
            <label>{{localize "PL1E.DamageReduction"}}</label>
            <label class="align-right">{{system.attributes.damageReduction}}</label>
        </div>
        <div class="form-group">
            <label>{{localize "PL1E.ImpactReduction"}}</label>
            <label class="align-right">{{system.attributes.impactReduction}}</label>
        </div>
        <div class="form-group">
            <label>{{localize "PL1E.FireReduction"}}</label>
            <label class="align-right">{{system.attributes.fireReduction}}</label>
        </div>
        <div class="form-group">
            <label>{{localize "PL1E.ColdReduction"}}</label>
            <label class="align-right">{{system.attributes.coldReduction}}</label>
        </div>
        <div class="form-group">
            <label>{{localize "PL1E.AcidReduction"}}</label>
            <label class="align-right">{{system.attributes.acidReduction}}</label>
        </div>
        <div class="form-group">
            <label>{{localize "PL1E.ShockReduction"}}</label>
            <label class="align-right">{{system.attributes.shockReduction}}</label>
        </div>
        <hr>
        <div class="form-group">
            <label>{{localize "PL1E.Languages"}}</label>
            <a class="trait-selector" data-options="languages" data-target="system.traits.languages"
               title="{{localize 'PL1E.TraitConfig' trait=(localize 'PL1E.Languages')}}" tabindex="0">
                <i class="fas fa-edit"></i>
            </a>
            <ul class="traits-list">
                {{#each system.traits.languages.selected as |v k|}}
                    <li class="tag {{k}}">{{v}}</li>
                {{/each}}
            </ul>
        </div>
        <div class="form-group">
            <label>{{localize "PL1E.Immunities"}}</label>
            <a class="trait-selector" data-options="damageTypes" data-target="system.traits.di"
               title="{{localize 'PL1E.TraitConfig' trait=(localize 'PL1E.Immunities')}}" tabindex="0">
                <i class="fas fa-edit"></i>
            </a>
            <ul class="traits-list">
                {{#each system.traits.di.selected as |v k|}}
                    <li class="tag {{k}}">{{v}}</li>
                {{/each}}
            </ul>
        </div>
    </div>
</section>