<section class="scroll-auto">
    <ol class="items-list">
        <li class="item items-header flexrow">
            <div class="item-name">{{localize "PL1E.Traits"}}</div>
        </li>
        {{#each features}}
            <li class="item flexrow grid grid-4col" data-item-id="{{_id}}">
                <div class="item-name">
                    <div class="item-image">
                        <a class="item-edit hover-red" data-item-uuid='{{uuid}}'>
                            <img src="{{img}}" title="{{name}}" width="24" height="24"/>
                        </a>
                    </div>
                    <h4>{{name}}</h4>
                </div>
                <div class="item-stats grid-span-2">

                </div>
                <div class="item-controls">
                    {{#if (eq system.childId undefined)}}
                        <a class="item-control item-delete" data-item-uuid="{{uuid}}" data-tooltip='{{localize "PL1E.Delete"}}'><i class="fas fa-trash"></i></a>
                    {{/if}}
                </div>
            </li>
        {{/each}}
    </ol>
    <ol class="items-list">
        {{#each abilities as |abilities level|}}
            <li class="item items-header flexrow">
                <div class="item-name">{{localize "PL1E.AbilitiesLevel"}} {{level}}</div>
            </li>
            {{#each abilities}}
                <li class="item flexrow grid grid-4col" data-item-id="{{_id}}">
                    <div class="item-name">
                        <div class="item-image">
                            <a class="item-edit hover-red" data-item-uuid='{{uuid}}'>
                                <img src="{{img}}" title="{{name}}" width="24" height="24"/>
                            </a>
                        </div>
                        <h4>{{name}}</h4>
                    </div>
                    <div class="item-stats grid-span-2">

                    </div>
                    <div class="item-controls">
                        {{#if system.isMemorized}}
                            <a class="item-control item-use" data-tooltip='{{localize "PL1E.Use"}}'><i class="fas fa-dice-d20"></i></a>
                            <a class="item-control item-toggle" data-tooltip='{{localize "PL1E.Memorize"}}'><i class="fas fa-book"></i></a>
                        {{else}}
                            <a class="item-control icon-inactive item-toggle" data-tooltip='{{localize "PL1E.Memorize"}}'><i class="fas fa-book"></i></a>
                        {{/if}}
                        {{#if (eq system.childId undefined)}}
                            <a class="item-control item-delete" data-item-uuid="{{uuid}}" data-tooltip='{{localize "PL1E.Delete"}}'><i class="fas fa-trash"></i></a>
                        {{/if}}
                    </div>
                </li>
            {{/each}}
        {{/each}}
    </ol>
    <ol class="items-list">
        {{#each effects as |section sid|}}
            <li class="item items-header flexrow" data-effect-type="{{section.type}}">
                <label class="item-name flexrow">{{localize section.label}}</label>
                <label>Source</label>
                <label>Duration</label>
            </li>
            <ol class="item-list">
                {{#each section.effects as |effect|}}
                    <li class="item flexrow" data-effect-id="{{effect.id}}">
                        <div class="item-name flexrow">
                            <img class="item-image" src="{{effect.icon}}"/>
                            <label>{{effect.label}}</label>
                        </div>
                        <label>{{effect.sourceName}}</label>
                        <label>{{effect.duration.label}}</label>
                    </li>
                {{/each}}
            </ol>
        {{/each}}
    </ol>
</section>