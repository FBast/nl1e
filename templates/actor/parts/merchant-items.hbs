<section class="scroll-auto">
    <ol class="items-list">
        <li class="item flexrow items-header">
            <div class="item-name">{{localize "PL1E.Weapon"}}</div>
        </li>
        {{#each weapons as |item key|}}
            <li class="item flexrow grid grid-4col" data-item-id="{{item._id}}">
                <div class="item-name">
                    <div class="item-image">
                        <a class="hover-red rollable" data-roll-type="item">
                            <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
                        </a>
                    </div>
                    <label>{{item.name}}</label>
                </div>
                <div class="item-stats grid-span-2">
                    {{#if item.system.attributes.contactAttackRange.apply}}
                        <i class="item-info fas fa-swords hover-green" data-tooltip="{{localize "PL1E.ContactAttackRange"}}">
                            <label>{{item.system.attributes.contactAttackRange.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.rangedAttackRange.apply}}
                        <i class="item-info fas fa-bow-arrow hover-green" data-tooltip="{{localize "PL1E.RangedAttackRange"}}">
                            <label>{{item.system.attributes.rangedAttackRange.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.parryProjectiles.apply}}
                        {{#if item.system.attributes.parryProjectiles.value}}
                            <i class="item-info fas fa-shield-halved hover-green" data-tooltip="{{localize "PL1E.ParryProjectiles"}}"></i>
                        {{/if}}
                    {{/if}}
                    {{#if item.system.attributes.slashing.apply}}
                        <i class="item-info fas fa-axe-battle hover-green" data-tooltip="{{localize "PL1E.Slashing"}}">
                            <label>{{item.system.attributes.slashing.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.crushing.apply}}
                        <i class="item-info fas fa-hammer-war hover-green" data-tooltip='{{localize "PL1E.Crushing"}}'>
                            <label>{{item.system.attributes.crushing.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.piercing.apply}}
                        <i class="item-info fas fa-dagger hover-green" data-tooltip='{{localize "PL1E.Piercing"}}'>
                            <label>{{item.system.attributes.piercing.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.parry.apply}}
                        <i class="item-info fas fa-shield hover-green" data-tooltip='{{localize "PL1E.Parry"}}'>
                            <label>{{item.system.attributes.parry.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.hands.apply}}
                        <i class="item-info fas fa-hand hover-green" data-tooltip='{{localize "PL1E.Hands"}}'>
                            <label>{{item.system.attributes.hands.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.ammo.apply}}
                        <i class="item-info fas fa-tally hover-green" data-tooltip='{{localize "PL1E.Ammo"}}'>
                            <label>{{item.system.attributes.ammo.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.movementPenalty.apply}}
                        <i class="item-info fas fa-weight-hanging hover-green" data-tooltip='{{localize "PL1E.MovementPenalty"}}'>
                            <label>{{item.system.attributes.movementPenalty.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.slashingReduction.apply}}
                        <i class="item-info far fa-axe-battle hover-green" data-tooltip='{{localize "PL1E.SlashingReduction"}}'>
                            <label>{{item.system.attributes.slashingReduction.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.crushingReduction.apply}}
                        <i class="item-info far fa-hammer-war hover-green" data-tooltip='{{localize "PL1E.CrushingReduction"}}'>
                            <label>{{item.system.attributes.crushingReduction.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.piercingReduction.apply}}
                        <i class="item-info far fa-dagger hover-green" data-tooltip='{{localize "PL1E.PiercingReduction"}}'>
                            <label>{{item.system.attributes.piercingReduction.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.movementPenalty.apply}}
                        <i class="item-info fas fa-weight-hanging hover-green" data-tooltip='{{localize "PL1E.MovementPenalty"}}'>
                            <label>{{item.system.attributes.movementPenalty.value}}</label>
                        </i>
                    {{/if}}
                    {{#if (gt item.system.price.gold.value 0)}}
                        <i class="item-info fas fa-coins color-gold hover-green" data-tooltip='{{localize "PL1E.Gold"}}'>
                            <label class="color-black">{{item.system.price.gold.value}}</label>
                        </i>
                    {{/if}}
                    {{#if (gt item.system.price.silver.value 0)}}
                        <i class="item-info fas fa-coins color-silver hover-green" data-tooltip='{{localize "PL1E.Silver"}}'>
                            <label class="color-black">{{item.system.price.silver.value}}</label>
                        </i>
                    {{/if}}
                    {{#if (gt item.system.price.copper.value 0)}}
                        <i class="item-info fas fa-coins color-copper hover-green" data-tooltip='{{localize "PL1E.Copper"}}'>
                            <label class="color-black">{{item.system.price.copper.value}}</label>
                        </i>
                    {{/if}}
                </div>
                <div class="item-controls">
                    {{#if (lt ../game.user.character.system.attributes.totalCurrency item.system.attributes.price.value)}}
                        <a class="item-control" data-tooltip='{{localize "PL1E.NotEnoughMoney"}}'>
                            <i class="fas fa-coins color-red"></i>
                        </a>
                    {{else}}
                        <a class="item-control item-buy" data-item-id='{{item._id}}' data-tooltip='{{localize "PL1E.Buy"}}'>
                            <i class="fas fa-coins"></i>
                        </a>
                    {{/if}}
                    <a class="item-control item-edit" data-item-id='{{item._id}}' data-tooltip='{{localize "PL1E.Edit"}}'><i class="fas fa-eye"></i></a>
                    <a class="item-control item-delete" data-item-id="{{item._id}}" data-tooltip='{{localize "PL1E.Delete"}}'><i class="fas fa-trash"></i></a>
                </div>
            </li>
        {{/each}}
    </ol>
