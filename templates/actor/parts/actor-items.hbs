<section class="scroll-auto">
    <ol class="items-list">
        <li class="item flexrow items-header">
            <div class="item-name">Weapon</div>
            <div class="item-stats">Stats</div>
            <div class="item-controls">
<!--                <a class="item-control item-create" title="Create Item" data-type="common"><i class="fas fa-plus"></i> Add item</a>-->
            </div>
        </li>
        {{#each weapons as |item key|}}
            <li class="item flexrow" data-item-id="{{item._id}}">
                <div class="item-name">
                    <div class="item-image">
                        <a class="rollable" data-roll-type="item">
                            <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
                        </a>
                    </div>
                    <h4>{{item.name}}</h4>
                </div>
                <div class="item-stats">
                    {{#if item.system.attributes.slashing.apply}}
                        <i class="item-stat fas fa-sword" data-tooltip='{{localize PL1E.Slashing}}'>
                            <label>{{item.system.attributes.slashing.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.crushing.apply}}
                        <i class="item-stat fas fa-hammer" data-tooltip='{{localize PL1E.Crushing}}'>
                            <label>{{item.system.attributes.crushing.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.piercing.apply}}
                        <i class="item-stat fas fa-bow-arrow" data-tooltip='{{localize PL1E.Piercing}}'>
                            <label>{{item.system.attributes.piercing.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.parry.apply}}
                        <i class="item-stat fas fa-shield" data-tooltip='{{localize PL1E.Parry}}'>
                            <label>{{item.system.attributes.parry.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.hands.apply}}
                        <i class="item-stat fas fa-hand" data-tooltip='{{localize PL1E.Hands}}'>
                            <label>{{item.system.attributes.hands.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.ammo.apply}}
                        <i class="item-stat fas fa-tally" data-tooltip='{{localize PL1E.Ammo}}'>
                            <label>{{item.system.attributes.ammo.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.range.apply}}
                        <i class="item-stat fas fa-bullseye" data-tooltip='{{localize PL1E.Range}}'>
                            <label>{{item.system.attributes.range.value}}</label>
                        </i>
                    {{/if}}
                </div>
                <div class="item-controls">
                    <a class="item-control item-toggle" title="Equip Item">
                        <i class="fas fa-shield-alt {{#unless item.system.isEquipped}}item-inactive{{/unless}}"></i>
                    </a>
                    <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                    <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                </div>
            </li>
        {{/each}}
    </ol>
    <ol class="items-list">
        <li class="item flexrow items-header">
            <div class="item-name">Wearable</div>
            <div class="item-stats">Stats</div>
            <div class="item-controls">
<!--                <a class="item-control item-create" title="Create Item" data-type="common"><i class="fas fa-plus"></i> Add item</a>-->
            </div>
        </li>
        {{#each wearables as |item key|}}
