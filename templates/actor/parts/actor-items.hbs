                            <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
                        </a>
                    </div>
                    <h4>{{item.name}}</h4>
                </div>
                <div class="item-controls">
                    <a class="item-control item-toggle" data-tooltip='Equip'>
                        <i class="fas fa-shield-alt {{#unless item.system.isEquipped}}item-inactive{{/unless}}"></i>
                    </a>
                    <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                    <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                </div>
            </li>
        {{/each}}
    </ol>
    <ol class="items-list">
        <li class="item flexrow items-header">
            <div class="item-name">Consumable</div>
        </li>
        {{#each consumables as |item key|}}
            <li class="item flexrow" data-item-id="{{item._id}}">
                <div class="item-name">
                    <div class="item-image">
                        <a class="rollable" data-roll-type="item">
                            <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
                        </a>
                    </div>
                    <h4>{{item.name}}</h4>
                </div>
                <div class="item-controls">
                    <a class="item-control item-toggle" data-tooltip='Use'>
                        <i class="fas fa-flask"></i>
                    </a>
                    <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                    <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                </div>
            </li>
        {{/each}}
    </ol>
    <ol class="items-list">
        <li class="item flexrow items-header">
            <div class="item-name">Common</div>
            <div class="item-controls">
