<section class="scroll-auto">
    <fieldset>
        <legend class="section-header">Currency</legend>
        <div class="currencies flexrow flex-between">
            {{#each system.currencies as |currency key|}}
            <div class="input-spin currency">
                <label>{{localize (configEntry "currencies" key)}}</label>
                <input name="system.currency.{{key}}" type="number" value="{{currency}}" data-dtype="Number" min="0" placeholder="0" disabled/>
                <span>
                    <i class="currency-control pointer fa fa-plus-square" data-currency="{{key}}" data-value="1"></i>
                    <i class="currency-control pointer fa fa-minus-square" data-currency="{{key}}" data-value="-1"></i>
                </span>
            </div>
            {{/each}}
        </div>
    </fieldset>
    <ol class="items-list">
        <li class="item flexrow items-header">
            <div class="item-name">{{localize "PL1E.Weapon"}}</div>
            <div class="item-infos">{{localize "PL1E.Stats"}}</div>
            <div class="item-infos">{{localize "PL1E.Mastery"}}</div>
            <div class="item-controls">
<!--                <a class="item-control item-create" title="Create Item" data-type="common"><i class="fas fa-plus"></i> Add item</a>-->
            </div>
        </li>
        {{#each weapons as |item key|}}
            <li class="item flexrow" data-item-id="{{item._id}}">
                <div class="item-name">
                    <div class="item-image">
                        <a class="rollable" data-roll-type="item">
                            <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
                        </a>
                    </div>
                    <h4>{{item.name}}</h4>
                </div>
                <div class="item-infos">
                    {{#if item.system.attributes.contactAttackRange.apply}}
                        <i class="item-info fas fa-swords tooltip" data-tooltip="{{localize "PL1E.ContactAttackRange"}}">
                            <label>{{item.system.attributes.contactAttackRange.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.rangedAttackRange.apply}}
                        <i class="item-info fas fa-bow-arrow tooltip" data-tooltip="{{localize "PL1E.RangedAttackRange"}}">
                            <label>{{item.system.attributes.rangedAttackRange.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.parryProjectiles.apply}}
                        {{#if item.system.attributes.parryProjectiles.value}}
                            <i class="item-info fas fa-shield-halved tooltip" data-tooltip="{{localize "PL1E.ParryProjectiles"}}"></i>
                        {{/if}}
                    {{/if}}
                    {{#if item.system.attributes.slashing.apply}}
                        <i class="item-info fas fa-axe-battle tooltip" data-tooltip="{{localize "PL1E.Slashing"}}">
                            <label>{{item.system.attributes.slashing.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.crushing.apply}}
                        <i class="item-info fas fa-hammer-war tooltip" data-tooltip='{{localize "PL1E.Crushing"}}'>
                            <label>{{item.system.attributes.crushing.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.piercing.apply}}
                        <i class="item-info fas fa-dagger tooltip" data-tooltip='{{localize "PL1E.Piercing"}}'>
                            <label>{{item.system.attributes.piercing.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.parry.apply}}
                        <i class="item-info fas fa-shield tooltip" data-tooltip='{{localize "PL1E.Parry"}}'>
                            <label>{{item.system.attributes.parry.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.hands.apply}}
                        <i class="item-info fas fa-hand tooltip" data-tooltip='{{localize "PL1E.Hands"}}'>
                            <label>{{item.system.attributes.hands.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.ammo.apply}}
                        <i class="item-info fas fa-tally tooltip" data-tooltip='{{localize "PL1E.Ammo"}}'>
                            <label>{{item.system.attributes.ammo.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.movementPenalty.apply}}
                        <i class="item-info fas fa-weight-hanging tooltip" data-tooltip='{{localize "PL1E.MovementPenalty"}}'>
                            <label>{{item.system.attributes.movementPenalty.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.slashingReduction.apply}}
                        <i class="item-info far fa-axe-battle tooltip" data-tooltip='{{localize "PL1E.SlashingReduction"}}'>
                            <label>{{item.system.attributes.slashingReduction.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.crushingReduction.apply}}
                        <i class="item-info far fa-hammer-war tooltip" data-tooltip='{{localize "PL1E.CrushingReduction"}}'>
                            <label>{{item.system.attributes.crushingReduction.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.piercingReduction.apply}}
                        <i class="item-info far fa-dagger tooltip" data-tooltip='{{localize "PL1E.PiercingReduction"}}'>
                            <label>{{item.system.attributes.piercingReduction.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.movementPenalty.apply}}
                        <i class="item-info fas fa-weight-hanging tooltip" data-tooltip='{{localize "PL1E.MovementPenalty"}}'>
                            <label>{{item.system.attributes.movementPenalty.value}}</label>
                        </i>
                    {{/if}}
                </div>
                <div class="item-infos">
                    <label>{{localize (lookup (lookup ../config item.system.attributes.mastery.select) item.system.attributes.mastery.value)}}</label>
                </div>
                <div class="item-controls">
                    <a class="item-control item-toggle weapon-toggle" data-main='false' data-tooltip='{{localize "PL1E.EquipSecondary"}}'>
                        <i class="fas fa-hand icon-flipped {{#unless item.system.isEquippedSecondary}}item-inactive{{/unless}}"></i>
                    </a>
                    <a class="item-control item-toggle weapon-toggle" data-main='true' data-tooltip='{{localize "PL1E.EquipMain"}}'>
                        <i class="fas fa-hand {{#unless item.system.isEquippedMain}}item-inactive{{/unless}}"></i>
                    </a>
                    <a class="item-control item-edit" data-tooltip='{{localize "PL1E.Edit"}}'><i class="fas fa-eye"></i></a>
                    <a class="item-control item-delete" data-tooltip='{{localize "PL1E.Delete"}}'><i class="fas fa-trash"></i></a>
                </div>
            </li>
        {{/each}}
    </ol>
    <ol class="items-list">
        <li class="item flexrow items-header">
            <div class="item-name">{{localize "PL1E.Wearable"}}</div>
            <div class="item-infos">{{localize "PL1E.Stats"}}</div>
            <div class="item-infos">{{localize "PL1E.Slot"}}</div>
            <div class="item-controls">
<!--                <a class="item-control item-create" title="Create Item" data-type="common"><i class="fas fa-plus"></i> Add item</a>-->
            </div>
        </li>
        {{#each wearables as |item key|}}
            <li class="item flexrow" data-item-id="{{item._id}}">
                <div class="item-name">
                    <div class="item-image">
                        <a class="rollable" data-roll-type="item">
                            <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
                        </a>
                    </div>
                    <h4>{{item.name}}</h4>
                </div>
                <div class="item-infos">
                    {{#if item.system.attributes.slashingReduction.apply}}
                        <i class="item-info far fa-axe-battle tooltip" data-tooltip='{{localize "PL1E.SlashingReduction"}}'>
                            <label>{{item.system.attributes.slashingReduction.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.crushingReduction.apply}}
                        <i class="item-info far fa-hammer-war tooltip" data-tooltip='{{localize "PL1E.CrushingReduction"}}'>
                            <label>{{item.system.attributes.crushingReduction.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.piercingReduction.apply}}
                        <i class="item-info far fa-dagger tooltip" data-tooltip='{{localize "PL1E.PiercingReduction"}}'>
                            <label>{{item.system.attributes.piercingReduction.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.movementPenalty.apply}}
                        <i class="item-info fas fa-weight-hanging tooltip" data-tooltip='{{localize "PL1E.MovementPenalty"}}'>
                            <label>{{item.system.attributes.movementPenalty.value}}</label>
                        </i>
                    {{/if}}
                </div>
                <div class="item-infos">
                    <label>{{localize (lookup (lookup ../config item.system.attributes.slot.select) item.system.attributes.slot.value)}}</label>
                </div>
                <div class="item-controls">
                    {{#if (eq item.system.attributes.slot.value "clothes")}}
                        <a class="item-control item-toggle wearable-toggle" data-tooltip='Reloadable'>
                            <i class="fas fa-shirt-long-sleeve {{#unless item.system.isEquipped}}item-inactive{{/unless}}"></i>
                        </a>
                    {{else if (eq item.system.attributes.slot.value "armor")}}
                        <a class="item-control item-toggle wearable-toggle" data-tooltip='Reloadable'>
                            <i class="fas fa-helmet-battle {{#unless item.system.isEquipped}}item-inactive{{/unless}}"></i>
                        </a>
                    {{else if (eq item.system.attributes.slot.value "ring")}}
                        <a class="item-control item-toggle wearable-toggle" data-tooltip='Reloadable'>
                            <i class="fas fa-ring {{#unless item.system.isEquipped}}item-inactive{{/unless}}"></i>
                        </a>
                    {{else if (eq item.system.attributes.slot.value "amulet")}}
                        <a class="item-control item-toggle wearable-toggle" data-tooltip='Reloadable'>
                            <i class="fas fa-gem {{#unless item.system.isEquipped}}item-inactive{{/unless}}"></i>
                        </a>
                    {{else}}
                        <a class="item-control item-toggle wearable-toggle" data-tooltip='{{localize "PL1E.Equip"}}'>
                            <i class="fas fa-clothes-hanger {{#unless item.system.isEquipped}}item-inactive{{/unless}}"></i>
                        </a>
                    {{/if}}
                    <a class="item-control item-edit" data-tooltip='{{localize "PL1E.Edit"}}'><i class="fas fa-eye"></i></a>
                    <a class="item-control item-delete" data-tooltip='{{localize "PL1E.Delete"}}'><i class="fas fa-trash"></i></a>
                </div>
            </li>
        {{/each}}
    </ol>
    <ol class="items-list">
        <li class="item flexrow items-header">
            <div class="item-name">{{localize "PL1E.Consumable"}}</div>
            <div class="item-infos">{{localize "PL1E.Stats"}}</div>
            <div class="item-infos">{{localize "PL1E.Activation"}}</div>
            <div class="item-controls"></div>
        </li>
        {{#each consumables as |item key|}}
            <li class="item flexrow" data-item-id="{{item._id}}">
                <div class="item-name">
                    <div class="item-image">
                        <a class="rollable" data-roll-type="item">
                            <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
                        </a>
                    </div>
                    <h4>{{item.name}}</h4>
                </div>
                <div class="item-infos">
                    {{#if item.system.attributes.healthRecovery.apply}}
                        <i class="item-info fas fa-heart tooltip" data-tooltip='{{localize "PL1E.HealthRecovery"}}'>
                            <label>{{item.system.attributes.healthRecovery.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.staminaRecovery.apply}}
                        <i class="item-info fas fa-wave-pulse tooltip" data-tooltip='{{localize "PL1E.StaminaRecovery"}}'>
                            <label>{{item.system.attributes.staminaRecovery.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.manaRecovery.apply}}
                        <i class="item-info fas fa-sparkles tooltip" data-tooltip='{{localize "PL1E.ManaRecovery"}}'>
                            <label>{{item.system.attributes.manaRecovery.value}}</label>
                        </i>
                    {{/if}}
                    {{#if item.system.attributes.uses.apply}}
                        {{#if (gt item.system.attributes.uses.value 1)}}
                            {{#if (eq item.system.removedUses 0)}}
                                <i class="item-info fas fa-hourglass-start tooltip" data-tooltip='{{localize "PL1E.Uses"}}'>
                                    <label>{{minus item.system.attributes.uses.value item.system.removedUses}}</label>
                                </i>
                            {{else if (eq item.system.removedUses item.system.attributes.uses.value)}}
                                <i class="item-info fas fa-hourglass-end tooltip" data-tooltip='{{localize "PL1E.Uses"}}'>
                                    <label>{{minus item.system.attributes.uses.value item.system.removedUses}}</label>
                                </i>
                            {{else}}
                                <i class="item-info fas fa-hourglass-half tooltip" data-tooltip='{{localize "PL1E.Uses"}}'>
                                    <label>{{minus item.system.attributes.uses.value item.system.removedUses}}</label>
                                </i>
                            {{/if}}
                        {{/if}}
                    {{/if}}
                    {{#if item.system.attributes.reloadable.apply}}
                        {{#if item.system.attributes.reloadable.value}}
                            <i class="item-info fas fa-repeat tooltip" data-tooltip='{{localize "PL1E.Reloadable"}}'></i>
                        {{/if}}
                    {{/if}}
                </div>
                <div class="item-infos">
                    <label>{{localize (lookup (lookup ../config item.system.attributes.slot.select) item.system.attributes.slot.value)}}</label>
                </div>
                <div class="item-controls">
                    {{#if (eq item.system.attributes.uses.value item.system.removedUses)}}
                        {{#if item.system.attributes.reloadable.value}}
                            <a class="item-control item-toggle consumable-reload" data-tooltip='{{localize "PL1E.Reload"}}'>
                                <i class="fas fa-repeat"></i>
                            </a>
                        {{/if}}
                    {{/if}}
                    {{#if (ne item.system.attributes.uses.value item.system.removedUses)}}
                        <a class="item-control item-toggle consumable-toggle" data-tooltip='{{localize "PL1E.Use"}}'>
                            <i class="fas fa-gear"></i>
                        </a>
                    {{/if}}
                    <a class="item-control item-edit" data-tooltip='{{localize "PL1E.Edit"}}'><i class="fas fa-eye"></i></a>
                    <a class="item-control item-delete" data-tooltip='{{localize "PL1E.Delete"}}'><i class="fas fa-trash"></i></a>
                </div>
            </li>
        {{/each}}
    </ol>
    <ol class="items-list">
        <li class="item flexrow items-header">
            <div class="item-name">{{localize "PL1E.Common"}}</div>
            <div class="item-controls">
                <a class="item-control item-create" title="Create Item" data-type="common"><i class="fas fa-plus"></i> Add item</a>
            </div>
        </li>
        {{#each commons as |item key|}}
            <li class="item flexrow" data-item-id="{{item._id}}">
                <div class="item-name">
                    <div class="item-image">
                        <a class="rollable" data-roll-type="item">
                            <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
                        </a>
                    </div>
                    <h4>{{item.name}}</h4>
                </div>
                <div class="item-controls">
                    <a class="item-control item-edit" data-tooltip='{{localize "PL1E.Edit"}}'><i class="fas fa-eye"></i></a>
                    <a class="item-control item-delete" data-tooltip='{{localize "PL1E.Delete"}}'><i class="fas fa-trash"></i></a>
                </div>
            </li>
        {{/each}}
    </ol>
</section>