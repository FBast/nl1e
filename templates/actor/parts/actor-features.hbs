<section class="scroll-auto">
    <ol class="items-list">
        <li class="item items-header flexrow">
            <div class="item-name">{{localize "PL1E.Traits"}}</div>
        </li>
        {{#each features as |item id|}}
            <li class="item flexrow grid grid-4col" data-item-id="{{item._id}}">
                <div class="item-name">
                    <div class="item-image">
                        <a class="interactable rollable" data-roll-type="item">
                            <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
                        </a>
                    </div>
                    <h4>{{item.name}}</h4>
                </div>
                <div class="item-stats grid-span-2">

                </div>
                <div class="item-controls">
                    <a class="item-control item-edit" data-tooltip='{{localize "PL1E.Edit"}}'><i class="fas fa-eye"></i></a>
                    {{#if (eq item.system.childId undefined)}}
                        <a class="item-control item-delete" data-tooltip='{{localize "PL1E.Delete"}}'><i class="fas fa-trash"></i></a>
                    {{/if}}
                </div>
            </li>
        {{/each}}
    </ol>
    <ol class="items-list">
        {{#each abilities as |abilities level|}}
            <li class="item items-header flexrow">
                <div class="item-name">{{localize "PL1E.AbilitiesLevel"}} {{level}}</div>
            </li>
            {{#each abilities as |item id|}}
                <li class="item flexrow grid grid-4col" data-item-id="{{item._id}}">
                    <div class="item-name">
                        <div class="item-image">
                            <a class="interactable rollable" data-roll-type="item">
                                <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
                            </a>
                        </div>
                        <h4>{{item.name}}</h4>
                    </div>
                    <div class="item-stats grid-span-2">

                    </div>
                    <div class="item-controls">
                        {{#if item.system.isMemorized}}
                            <a class="item-control item-toggle ability-toggle" data-tooltip='{{localize "PL1E.Memorize"}}'><i class="fas fa-book"></i></a>
                        {{else}}
                            <a class="item-control item-toggle item-inactive ability-toggle" data-tooltip='{{localize "PL1E.Memorize"}}'><i class="fas fa-book"></i></a>
                        {{/if}}
                        <a class="item-control item-edit" data-tooltip='{{localize "PL1E.Edit"}}'><i class="fas fa-eye"></i></a>
                        {{#if (eq item.system.childId undefined)}}
                            <a class="item-control item-delete" data-tooltip='{{localize "PL1E.Delete"}}'><i class="fas fa-trash"></i></a>
                        {{/if}}
                    </div>
                </li>
            {{/each}}
        {{/each}}
    </ol>
</section>