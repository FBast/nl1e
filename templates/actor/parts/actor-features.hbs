<section class="grid grid-8col">
  {{#each system.characteristics as |characteristic key|}}
  <div class="resource flex-group-center">
    <label class="resource-label flexlarge align-left">{{characteristic.label}}</label>
    <div class="characteristic flexrow flex-group-center">
      <input type="number" min="{{characteristic.min}}" max="{{characteristic.max}}" name="system.characteristics.{{key}}.base" value="{{characteristic.base}}" data-dtype="Number"/>
      <span class="characteristic-mod">{{numberFormat characteristic.mod decimals=0 sign=true}}</span>
    </div>
  </div>
  {{/each}}
</section>

<section class="grid grid-2col">
  <table>
    <tr>
      <th>Skill</th>
      <th>Mastery</th>
      <th>Roll</th>
    </tr>
    {{#each system.skills as |skill key|}}
    <tr>
      <td>
        <label for="{{skill.label}}" class="resource-label rollable flexlarge align-left" 
        data-roll="{{skill.number}}d{{skill.dice}}xo{{skill.dice}}cs>=4" data-label="{{skill.label}}">{{skill.label}}</label>
      </td>
      <td>
        <input type="radio" name="system.skills.{{key}}.mastery" class="mastery-1" value="1" data-dtype="Number" {{checked (eq skill.mastery 1)}} />
        <input type="radio" name="system.skills.{{key}}.mastery" class="mastery-2" value="2" data-dtype="Number" {{checked (eq skill.mastery 2)}} />
        <input type="radio" name="system.skills.{{key}}.mastery" class="mastery-3" value="3" data-dtype="Number" {{checked (eq skill.mastery 3)}} />
        <input type="radio" name="system.skills.{{key}}.mastery" class="mastery-4" value="4" data-dtype="Number" {{checked (eq skill.mastery 4)}} />
        <input type="radio" name="system.skills.{{key}}.mastery" class="mastery-5" value="5" data-dtype="Number" {{checked (eq skill.mastery 5)}} />
      </td>
      <td>{{skill.number}}D{{skill.dice}}</td>
    </tr>
    {{/each}}
  </table>

  {{!-- For the main features list, span the right two columns --}}
  <section class="main">
    {{!-- This is a Handlebars partial. They're stored in the `/parts` folder next to this sheet, and defined in module/helpers/templates.mjs --}}
    <ol class="items-list">
      <li class="item flexrow items-header">
        <div class="item-name">Name</div>
        <div class="item-controls">
          <a class="item-control item-create" title="Create item" data-type="feature"><i class="fas fa-plus"></i> Add item</a>
        </div>
      </li>
      {{#each features as |item id|}}
      <li class="item flexrow" data-item-id="{{item._id}}">
        <div class="item-name">
          <div class="item-image">
            <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
          </div>
          <h4>{{item.name}}</h4>
        </div>
        <div class="item-controls">
          <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
        </div>
      </li>
      {{/each}}
    </ol>
  </section>

</section>