<section class="scroll-auto">
    <fieldset>
        <legend class="section-header">{{localize "PL1E.Money"}}</legend>
        <div class="currency flexrow flex-between">
            <i class="convert-icon currency-icon fas fa-money-bill-transfer currency-convert hover-red" data-tooltip='{{localize "PL1E.ConvertCurrency"}}'></i>
            {{#each system.money}}
                <div class="input-spin currency">
                    {{#with (configEntry "money" @key)}}
                        <i class="currency-icon fas fa-coins color-{{@key}} hover-green" data-tooltip='{{localize this}}'></i>
                    {{/with}}
                    <input name="system.money.{{@key}}.value" type="number" value="{{this}}" data-dtype="Number" min="0" placeholder="0" disabled/>
                    <span>
                        <i class="currency-control pointer fa fa-plus-square" data-currency="{{@key}}" data-value="1"></i>
                        <i class="currency-control pointer fa fa-minus-square" data-currency="{{@key}}" data-value="-1"></i>
                    </span>
                </div>
            {{/each}}
        </div>
    </fieldset>
    <ol class="items-list">
        <li class="item flexrow items-header">
            <div class="item-name">{{localize "PL1E.Weapon"}}</div>
        </li>
        {{#each weapons}}
            <li class="item grid grid-4col" data-item-id="{{_id}}">
                <div class="item-name">
                    <div class="item-image">
                        <a class="item-edit hover-red" data-item-uuid='{{uuid}}'>
                            <img src="{{img}}" title="{{name}}" width="24" height="24"/>
                        </a>
                    </div>
                    <label>{{name}}</label>
                </div>
                <div class="item-stats grid-span-2">
                    {{#if system.attributes.contactAttackRange.apply}}
                        <i class="item-info fas fa-swords hover-green" data-tooltip="{{localize "PL1E.ContactAttackRange"}}">
                            <label>{{system.attributes.contactAttackRange.value}}</label>
                        </i>
                    {{/if}}
                    {{#if system.attributes.rangedAttackRange.apply}}
                        <i class="item-info fas fa-bow-arrow hover-green" data-tooltip="{{localize "PL1E.RangedAttackRange"}}">
                            <label>{{system.attributes.rangedAttackRange.value}}</label>
                        </i>
                    {{/if}}
                    {{#if system.attributes.parryProjectiles.apply}}
                        {{#if system.attributes.parryProjectiles.value}}
                            <i class="item-info fas fa-shield-halved hover-green" data-tooltip="{{localize "PL1E.ParryProjectiles"}}"></i>
                        {{/if}}
                    {{/if}}
                    {{#if system.attributes.slashing.apply}}
                        <i class="item-info fas fa-axe-battle hover-green" data-tooltip="{{localize "PL1E.Slashing"}}">
                            <label>{{system.attributes.slashing.value}}</label>
                        </i>
                    {{/if}}
                    {{#if system.attributes.crushing.apply}}
                        <i class="item-info fas fa-hammer-war hover-green" data-tooltip='{{localize "PL1E.Crushing"}}'>
                            <label>{{system.attributes.crushing.value}}</label>
                        </i>
                    {{/if}}
                    {{#if system.attributes.piercing.apply}}
                        <i class="item-info fas fa-dagger hover-green" data-tooltip='{{localize "PL1E.Piercing"}}'>
                            <label>{{system.attributes.piercing.value}}</label>
                        </i>
                    {{/if}}
                    {{#if system.attributes.parryBonuses.apply}}
                        <i class="item-info fas fa-shield hover-green" data-tooltip='{{localize "PL1E.Parry"}}'>
                            <label>{{system.attributes.parryBonuses.value}}</label>
                        </i>
                    {{/if}}
                    {{#if system.attributes.hands.apply}}
                        <i class="item-info fas fa-hand hover-green" data-tooltip='{{localize "PL1E.Hands"}}'>
                            <label>{{system.attributes.hands.value}}</label>
                        </i>
                    {{/if}}
                    {{#if system.attributes.ammo.apply}}
                        <i class="item-info fas fa-tally hover-green" data-tooltip='{{localize "PL1E.Ammo"}}'>
                            <label>{{system.attributes.ammo.value}}</label>
                        </i>
                    {{/if}}
                    {{#if system.attributes.movementPenalty.apply}}
                        <i class="item-info fas fa-weight-hanging hover-green" data-tooltip='{{localize "PL1E.MovementPenalty"}}'>
                            <label>{{system.attributes.movementPenalty.value}}</label>
                        </i>
                    {{/if}}
                    {{#if system.attributes.slashingReduction.apply}}
                        <i class="item-info far fa-axe-battle hover-green" data-tooltip='{{localize "PL1E.SlashingReduction"}}'>
                            <label>{{system.attributes.slashingReduction.value}}</label>
                        </i>
                    {{/if}}
                    {{#if system.attributes.crushingReduction.apply}}
                        <i class="item-info far fa-hammer-war hover-green" data-tooltip='{{localize "PL1E.CrushingReduction"}}'>
                            <label>{{system.attributes.crushingReduction.value}}</label>
                        </i>
                    {{/if}}
                    {{#if system.attributes.piercingReduction.apply}}
                        <i class="item-info far fa-dagger hover-green" data-tooltip='{{localize "PL1E.PiercingReduction"}}'>
                            <label>{{system.attributes.piercingReduction.value}}</label>
                        </i>
                    {{/if}}
                    {{#if system.attributes.movementPenalty.apply}}
                        <i class="item-info fas fa-weight-hanging hover-green" data-tooltip='{{localize "PL1E.MovementPenalty"}}'>
                            <label>{{system.attributes.movementPenalty.value}}</label>
                        </i>
                    {{/if}}
                </div>
                <div class="item-controls">
                    <a class="item-control item-toggle" data-main='false' data-tooltip='{{localize "PL1E.EquipSecondary"}}'>
                        <i class="fas fa-hand icon-flipped {{#unless system.isEquippedSecondary}}icon-inactive{{/unless}}"></i>
                    </a>
                    <a class="item-control item-toggle" data-main='true' data-tooltip='{{localize "PL1E.EquipMain"}}'>
                        <i class="fas fa-hand {{#unless system.isEquippedMain}}icon-inactive{{/unless}}"></i>
                    </a>
                    <a class="item-control item-delete" data-item-uuid="{{uuid}}" data-tooltip='{{localize "PL1E.Delete"}}'><i class="fas fa-trash"></i></a>
                </div>
            </li>
        {{/each}}
    </ol>
    <ol class="items-list">
        <li class="item flexrow items-header">
            <div class="item-name">{{localize "PL1E.Wearable"}}</div>
        </li>
        {{#each wearables}}
            <li class="item grid grid-4col" data-item-id="{{_id}}">
                <div class="item-name">
                    <div class="item-image">
                        <a class="item-edit hover-red" data-item-uuid='{{uuid}}'>
                            <img src="{{img}}" title="{{name}}" width="24" height="24"/>
                        </a>
                    </div>
                    <label>{{name}}</label>
                </div>
                <div class="item-stats grid-span-2">
                    {{#if system.attributes.slashingReduction.apply}}
                        <i class="item-info far fa-axe-battle hover-green" data-tooltip='{{localize "PL1E.SlashingReduction"}}'>
                            <label>{{system.attributes.slashingReduction.value}}</label>
                        </i>
                    {{/if}}
                    {{#if system.attributes.crushingReduction.apply}}
                        <i class="item-info far fa-hammer-war hover-green" data-tooltip='{{localize "PL1E.CrushingReduction"}}'>
                            <label>{{system.attributes.crushingReduction.value}}</label>
                        </i>
                    {{/if}}
                    {{#if system.attributes.piercingReduction.apply}}
                        <i class="item-info far fa-dagger hover-green" data-tooltip='{{localize "PL1E.PiercingReduction"}}'>
                            <label>{{system.attributes.piercingReduction.value}}</label>
                        </i>
                    {{/if}}
                    {{#if system.attributes.movementPenalty.apply}}
                        <i class="item-info fas fa-weight-hanging hover-green" data-tooltip='{{localize "PL1E.MovementPenalty"}}'>
                            <label>{{system.attributes.movementPenalty.value}}</label>
                        </i>
                    {{/if}}
                </div>
                <div class="item-controls">
                    {{#if (eq system.attributes.slot.value "clothes")}}
                        <a class="item-control item-toggle" data-tooltip='{{localize "PL1E.Equip"}}'>
                            <i class="fas fa-shirt-long-sleeve {{#unless system.isEquipped}}icon-inactive{{/unless}}"></i>
                        </a>
                    {{else if (eq system.attributes.slot.value "armor")}}
                        <a class="item-control item-toggle" data-tooltip='{{localize "PL1E.Equip"}}'>
                            <i class="fas fa-helmet-battle {{#unless system.isEquipped}}icon-inactive{{/unless}}"></i>
                        </a>
                    {{else if (eq system.attributes.slot.value "ring")}}
                        <a class="item-control item-toggle" data-tooltip='{{localize "PL1E.Equip"}}'>
                            <i class="fas fa-ring {{#unless system.isEquipped}}icon-inactive{{/unless}}"></i>
                        </a>
                    {{else if (eq system.attributes.slot.value "amulet")}}
                        <a class="item-control item-toggle" data-tooltip='{{localize "PL1E.Equip"}}'>
                            <i class="fas fa-gem {{#unless system.isEquipped}}icon-inactive{{/unless}}"></i>
                        </a>
                    {{else}}
                        <a class="item-control item-toggle" data-tooltip='{{localize "PL1E.Equip"}}'>
                            <i class="fas fa-clothes-hanger {{#unless system.isEquipped}}icon-inactive{{/unless}}"></i>
                        </a>
                    {{/if}}
                    <a class="item-control item-delete" data-item-uuid="{{uuid}}" data-tooltip='{{localize "PL1E.Delete"}}'><i class="fas fa-trash"></i></a>
                </div>
            </li>
        {{/each}}
    </ol>
    <ol class="items-list">
        <li class="item flexrow items-header">
            <div class="item-name">{{localize "PL1E.Consumable"}}</div>
        </li>
        {{#each consumables}}
            <li class="item grid grid-4col" data-item-id="{{_id}}">
                <div class="item-name">
                    <div class="item-image">
                        <a class="item-edit hover-red" data-item-uuid='{{uuid}}'>
                            <img src="{{img}}" title="{{name}}" width="24" height="24"/>
                        </a>
                    </div>
                    <label>{{name}}</label>
                </div>
                <div class="item-stats grid-span-2">
                    {{#if system.attributes.healthRecovery.apply}}
                        <i class="item-info fas fa-heart hover-green" data-tooltip='{{localize "PL1E.HealthRecovery"}}'>
                            <label>{{system.attributes.healthRecovery.value}}</label>
                        </i>
                    {{/if}}
                    {{#if system.attributes.staminaRecovery.apply}}
                        <i class="item-info fas fa-wave-pulse hover-green" data-tooltip='{{localize "PL1E.StaminaRecovery"}}'>
                            <label>{{system.attributes.staminaRecovery.value}}</label>
                        </i>
                    {{/if}}
                    {{#if system.attributes.manaRecovery.apply}}
                        <i class="item-info fas fa-sparkles hover-green" data-tooltip='{{localize "PL1E.ManaRecovery"}}'>
                            <label>{{system.attributes.manaRecovery.value}}</label>
                        </i>
                    {{/if}}
                    {{#if system.attributes.uses.apply}}
                        {{#if (gt system.attributes.uses.value 1)}}
                            {{#if (eq system.removedUses 0)}}
                                <i class="item-info fas fa-hourglass-start hover-green" data-tooltip='{{localize "PL1E.Uses"}}'>
                                    <label>{{minus system.attributes.uses.value system.removedUses}}</label>
                                </i>
                            {{else if (eq system.removedUses system.attributes.uses.value)}}
                                <i class="item-info fas fa-hourglass-end hover-green" data-tooltip='{{localize "PL1E.Uses"}}'>
                                    <label>{{minus system.attributes.uses.value system.removedUses}}</label>
                                </i>
                            {{else}}
                                <i class="item-info fas fa-hourglass-half hover-green" data-tooltip='{{localize "PL1E.Uses"}}'>
                                    <label>{{minus system.attributes.uses.value system.removedUses}}</label>
                                </i>
                            {{/if}}
                        {{/if}}
                    {{/if}}
                    {{#if system.attributes.reloadable.apply}}
                        {{#if system.attributes.reloadable.value}}
                            <i class="item-info fas fa-repeat hover-green" data-tooltip='{{localize "PL1E.Reloadable"}}'></i>
                        {{/if}}
                    {{/if}}
                </div>
                <div class="item-controls">
                    {{#if (eq system.attributes.uses.value system.removedUses)}}
                        {{#if system.attributes.reloadable.value}}
                            <a class="item-control consumable-reload" data-tooltip='{{localize "PL1E.Reload"}}'>
                                <i class="fas fa-repeat"></i>
                            </a>
                        {{/if}}
                    {{/if}}
                    {{#if (ne system.attributes.uses.value system.removedUses)}}
                        <a class="item-control item-use" data-tooltip='{{localize "PL1E.Use"}}'>
                            <i class="fas fa-dice-d20"></i>
                        </a>
                    {{/if}}
                    <a class="item-control item-delete" data-item-uuid="{{uuid}}" data-tooltip='{{localize "PL1E.Delete"}}'><i class="fas fa-trash"></i></a>
                </div>
            </li>
        {{/each}}
    </ol>
    <ol class="items-list">
        <li class="item flexrow items-header grid grid-4col">
            <div class="item-name grid-span-3">{{localize "PL1E.Common"}}</div>
            <div class="item-controls">
                <a class="item-control item-create" title="Create Item" data-type="common"><i class="fas fa-plus"></i> Add item</a>
            </div>
        </li>
        {{#each commons}}
            <li class="item grid grid-4col" data-item-id="{{_id}}">
                <div class="item-name grid-span-3">
                    <div class="item-image">
                        <a class="item-edit hover-red" data-item-uuid='{{uuid}}'>
                            <img src="{{img}}" title="{{name}}" width="24" height="24"/>
                        </a>
                    </div>
                    <label>{{name}}</label>
                </div>
                <div class="item-controls">
                    <a class="item-control item-delete" data-item-uuid="{{uuid}}" data-tooltip='{{localize "PL1E.Delete"}}'><i class="fas fa-trash"></i></a>
                </div>
            </li>
        {{/each}}
    </ol>
</section>