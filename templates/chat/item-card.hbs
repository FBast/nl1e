<div class="chat-card item-card" data-actor-id="{{actor._id}}" data-item-id="{{item._id}}"
     {{#if tokenId}}data-token-id="{{tokenId}}"{{/if}} {{#if isSpell}}data-spell-level="{{item.item.system.level}}"{{/if}}>
    <header class="card-header flexrow">
        <img src="{{item.img}}" title="{{item.name}}" width="36" height="36"/>
        <h3 class="item-name">{{item.name}}</h3>
    </header>
    <div class="card-content">
        {{item.system.attributes.description.value}}
        {{#if simpleRoll}}
            <div class="dice-roll">
                <div class="dice-result">
                    <h4 class="dice-total">
                        {{#if (gt skillRoll.result 0)}}
                            <div class="color-green">{{skillRoll.result}} ({{localize "PL1E.Success"}})</div>
                        {{else if (eq skillRoll.result 0)}}
                            {{skillRoll.result}} ({{localize "PL1E.PartialSuccess"}})
                        {{else}}
                            <div class="color-red">{{skillRoll.result}} ({{localize "PL1E.Failure"}})</div>
                        {{/if}}
                    </h4>
                </div>
            </div>
            <div class="card-stats">
            {{#each skillRoll.attributes as |attribute id|}}
                {{#if (ne attribute.fas undefined)}}
                    <i class="fas {{attribute.fas}} hover-green" data-tooltip="{{localize attribute.label}}">
                        <label>{{attribute.value}}</label>
                    </i>
                {{/if}}
            {{/each}}
        {{else}}

        {{/if}}
    </div>
    <div class="card-buttons">
        <button data-action="apply" data-item-id={{itemId}}>{{localize "PL1E.Apply"}}</button>
        <button data-action="cancel" data-item-id={{itemId}}>{{localize "PL1E.Cancel"}}</button>
    </div>
    <footer class="card-footer">
    </footer>
</div>
