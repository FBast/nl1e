<form class="pl1e {{cssClass}} flexcol" autocomplete="off">
    {{> journalEntryPageHeader}}

    <div class="sheet-body">
        <div class="list-fields">
            <div class="list-header">
                <h4>{{localize "PL1E.OrganizationDetails"}}</h4>
            </div>
            <div class="list-column">

                <div class="field">
                    <div class="field-content">
                        <div class="title">
                            <label>{{localize "PL1E.Blazon"}}</label>
                        </div>
                        <div class="fields">
                            <input type="text" name="system.blazon" value="{{system.blazon}}" />
                            {{filePicker target="system.blazon" type="image"}}
                        </div>
                    </div>
                    <p class="field-hint">{{localize "PL1E.DescriptionBlazon"}}</p>
                </div>

                <div class="field">
                    <div class="field-content">
                        <div class="title">
                            <label>{{localize "PL1E.Translation"}}</label>
                        </div>
                        <div class="fields">
                            <input type="text" name="system.translation" value="{{system.translation}}" />
                        </div>
                    </div>
                    <p class="field-hint">{{localize "PL1E.DescriptionTranslation"}}</p>
                </div>

                <div class="field">
                    <div class="field-content">
                        <div class="title">
                            <label>{{localize "PL1E.Type"}}</label>
                        </div>
                        <div class="fields">
                            <input type="text" name="system.type" value="{{system.type}}" />
                        </div>
                    </div>
                    <p class="field-hint">{{localize "PL1E.DescriptionType"}}</p>
                </div>

                <div class="field">
                    <div class="field-content">
                        <div class="title">
                            <label>{{localize "PL1E.Culture"}}</label>
                        </div>
                        <div class="fields">
                            <input type="text" name="system.culture" value="{{system.culture}}" />
                        </div>
                    </div>
                    <p class="field-hint">{{localize "PL1E.DescriptionCulture"}}</p>
                </div>

                <div class="field">
                    <div class="field-content">
                        <div class="title">
                            <label>{{localize "PL1E.Religion"}}</label>
                        </div>
                        <div class="fields">
                            <input type="text" name="system.religion" value="{{system.religion}}" />
                        </div>
                    </div>
                    <p class="field-hint">{{localize "PL1E.DescriptionReligion"}}</p>
                </div>

                <div class="field">
                    <div class="field-content">
                        <div class="title">
                            <label>{{localize "PL1E.Population"}}</label>
                        </div>
                        <div class="fields">
                            <input type="range" name="system.population" min="0" max="9" value="{{system.population}}" oninput="this.nextElementSibling.value = this.value" />
                            <output>{{system.population}}</output>
                        </div>
                    </div>
                    <p class="field-hint">{{localize "PL1E.DescriptionPopulation"}}</p>
                </div>

                <div class="field">
                    <div class="field-content">
                        <div class="title">
                            <label>{{localize "PL1E.Power"}}</label>
                        </div>
                        <div class="fields">
                            <input type="range" name="system.power" min="0" max="9" value="{{system.power}}" oninput="this.nextElementSibling.value = this.value" />
                            <output>{{system.power}}</output>
                        </div>
                    </div>
                    <p class="field-hint">{{localize "PL1E.DescriptionPower"}}</p>
                </div>

                <div class="field">
                    <div class="field-content">
                        <div class="title">
                            <label>{{localize "PL1E.Content"}}</label>
                        </div>
                        <div class="fields">
                            <button class="launch-text-editor" data-target="text.content">
                                <i class="fas fa-edit"></i> {{localize "PL1E.EditContent"}}
                            </button>
                        </div>
                    </div>
                    <p class="field-hint">{{localize "PL1E.DescriptionContent"}}</p>
                </div>

            </div>
        </div>
    </div>
</form>
