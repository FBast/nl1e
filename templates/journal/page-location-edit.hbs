<form class="{{cssClass}} flexcol" autocomplete="off">
    {{> journalEntryPageHeader}}

    <div class="form-group">
        <label>{{localize "PL1E.Banner"}}</label>
        <div class="form-fields">
            <input name="system.banner" type="text" value="{{system.banner}}"/>
            {{filePicker target="system.banner" type="image"}}
        </div>
        <p class="hint">{{localize "PL1E.DescriptionBanner"}}</p>
    </div>

    <div class="form-group">
        <label>{{localize "PL1E.Translation"}}</label>
        <div class="form-fields">
            <input type="text" name="system.translation" value="{{system.translation}}"/>
        </div>
        <p class="hint">{{localize "PL1E.DescriptionTranslation"}}</p>
    </div>

    <div class="form-group">
        <label>{{localize "PL1E.Type"}}</label>
        <div class="form-fields">
            <select name="system.type">
                {{customSelectOptions (config "locationTypes") selected=system.type localize=true}}
            </select>
        </div>
        <p class="hint">{{localize "PL1E.DescriptionLocationType"}}</p>
    </div>

    <div class="form-group">
        <label>{{localize "PL1E.SubType"}}</label>
        <div class="form-fields">
            <select name="system.subType">
                {{customSelectOptions (config (concat system.type "Types")) selected=system.subType localize=true}}
            </select>
        </div>
        <p class="hint">{{localize "PL1E.DescriptionLocationSubType"}}</p>
    </div>

    {{#if (ne system.type "area")}}
        <div class="form-group">
            <label>{{localize "PL1E.Ruin"}}</label>
            <div class="form-fields">
                <input type="checkbox" name="system.ruin" {{checked system.ruin}} data-dtype="Boolean"/>
            </div>
            <p class="hint">{{localize "PL1E.DescriptionRuin"}}</p>
        </div>
    {{/if}}

    {{#if (ne system.type "building")}}
        <div class="form-group">
            <label>{{localize "PL1E.Climate"}}</label>
            <div class="form-fields">
                <select name="system.climate">
                    {{customSelectOptions (config "climates") selected=system.climate localize=true}}
                </select>
            </div>
            <p class="hint">{{localize "PL1E.DescriptionClimate"}}</p>
        </div>
    {{/if}}

    <div class="form-group">
        <label>{{localize "PL1E.Content"}}</label>
        <div class="form-fields">
            <button class="launch-text-editor" data-target="system.content">
                <i class="fas fa-edit"></i> {{localize "PL1E.EditContent"}}
            </button>
        </div>
        <p class="hint">{{localize "PL1E.DescriptionContent"}}</p>
    </div>

</form>
