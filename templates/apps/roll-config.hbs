<div class="form-group">
    <label>{{localize "Avantage"}}</label>
    <div class="form-fields">
        <a class="item sub"><i class="fas fa-minus"></i></a>
        <input type="number" class="input num-short" id="avantage" name="avantage" value="0" min="-10" max="10"/>
        <a class="item add"><i class="fas fa-plus"></i></a>
    </div>
</div>
<div class="form-group">
    <label>{{localize "Utiliser point de destin√©e"}}</label>
    <input type="checkbox" id="destinee" name="destinee"/>
</div>
<div class="form-group">
    <label for="skill">{{localize "Selected Skill"}}</label>
    <select id="skill" name="skill" class="input">
        {{#each skills}}
            <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
</div>
<div class="form-group flexrow align-center">
    <button type="button" class="item" id="cancel">{{localize "Cancel"}}</button>
    <button type="button" class="item" id="roll">{{localize "Roll"}}</button>
</div>