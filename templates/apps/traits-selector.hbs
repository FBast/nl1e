<form class="pl1e" autocomplete="off" onsubmit="event.preventDefault();">
    <section class="modal-body">
        <div class="flex-vertical gap-md">

            <div class="list-fields">
                <div class="list-column">
                    {{#each choices}}
                        <div class="field">
                            <div class="field-content">
                                <div class="title">
                                    <label>{{localize label}}</label>
                                </div>
                                <div class="fields">
                                    <input type="checkbox" name="{{@key}}" {{checked value}} data-dtype="Boolean">
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>

            <button type="submit">
                <i class="fas fa-save"></i> {{localize "PL1E.Save"}}
            </button>

        </div>
    </section>
</form>
