<div class="icon-group">
    <div class="icon">
        <i class="far fa-trophy hover-info" data-tooltip='{{localize "PL1E.Level"}}'></i>
        <label>{{system.attributes.level}}</label>
    </div>
    {{#if (eq system.attributes.activation "outOfCombat")}}
        <div class="icon">
            <i class="far fa-dove hover-info" data-tooltip='{{localize "PL1E.OutOfCombatOnly"}}'></i>
        </div>
    {{/if}}
    {{#if (ne system.attributes.actionCost 0)}}
        <div class="icon">
            <i class="far fa-clock hover-info" data-tooltip='{{localize "PL1E.ActionCost"}}'></i>
            <label>{{system.attributes.actionCost}}</label>
        </div>
    {{/if}}
    {{#if (ne system.attributes.reactionCost 0)}}
        <div class="icon">
            <i class="far fa-reply-clock hover-info" data-tooltip='{{localize "PL1E.ReactionCost"}}'></i>
            <label>{{system.attributes.reactionCost}}</label>
        </div>
    {{/if}}
    {{#if (ne system.attributes.quickActionCost 0)}}
        <div class="icon">
            <i class="far fa-bell hover-info" data-tooltip='{{localize "PL1E.QuickActionCost"}}'></i>
            <label>{{system.attributes.quickActionCost}}</label>
        </div>
    {{/if}}
</div>

<div class="icon-group">
    {{#if (and system.attributes.usageCost (ne system.attributes.usageCost 0))}}
        <div class="icon">
            <i class="far fa-tally hover-info" data-tooltip='{{localize "PL1E.UsageCost"}}'></i>
            <label>{{system.attributes.usageCost}}</label>
        </div>
    {{/if}}
    {{#if system.attributes.isMajorAction}}
        <div class="icon">
            <i class="far fa-star hover-info" data-tooltip='{{localize "PL1E.IsMajorAction"}}'></i>
        </div>
    {{/if}}
    {{#if system.attributes.isDangerous}}
        <div class="icon">
            <i class="far fa-exclamation-triangle hover-info" data-tooltip='{{localize "PL1E.IsDangerous"}}'></i>
        </div>
    {{/if}}
    {{#if (eq system.attributes.linkedItem "melee")}}
        <div class="icon">
            <i class="far fa-sword hover-info" data-tooltip='{{localize "PL1E.Melee"}}'></i>
        </div>
    {{else if (eq system.attributes.linkedItem "range")}}
        <div class="icon">
            <i class="far fa-bow-arrow hover-info" data-tooltip='{{localize "PL1E.Ranged"}}'></i>
        </div>
    {{/if}}
    {{#if (eq system.attributes.linkedItem "none")}}
        {{#if (ne system.attributes.range 0)}}
            <div class="icon">
                <i class="far fa-bullseye hover-info" data-tooltip='{{localize "PL1E.Range"}}'></i>
                <label>{{system.attributes.range}}</label>
            </div>
        {{/if}}
    {{/if}}
</div>

<div class="icon-group">
    {{#if (ne system.attributes.healthCost 0)}}
        <div class="icon">
            <i class="fas fa-heart color-health hover-info" data-tooltip='{{localize "PL1E.HealthCost"}}'></i>
            <label>{{system.attributes.healthCost}}</label>
        </div>
    {{/if}}
    {{#if (ne system.attributes.staminaCost 0)}}
        <div class="icon">
            <i class="fas fa-lungs color-stamina hover-info" data-tooltip="{{localize "PL1E.StaminaCost"}}"></i>
            <label>{{system.attributes.staminaCost}}</label>
        </div>
    {{/if}}
    {{#if (ne system.attributes.manaCost 0)}}
        <div class="icon">
            <i class="fas fa-brain color-mana hover-info" data-tooltip='{{localize "PL1E.ManaCost"}}'></i>
            <label>{{system.attributes.manaCost}}</label>
        </div>
    {{/if}}
</div>