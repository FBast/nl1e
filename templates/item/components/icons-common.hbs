{{#if (eq system.attributes.commonType "food")}}
    <i class="far fa-pot-food hover-info" data-tooltip='{{localize "PL1E.Food"}}'></i>
{{/if}}
{{#if (eq system.attributes.commonType "rest")}}
    <i class="far fa-campground hover-info" data-tooltip='{{localize "PL1E.Rest"}}'></i>
{{/if}}
{{#if (ne system.attributes.healthRest 0)}}
    <i class="far fa-heart hover-info" data-tooltip='{{localize "PL1E.HealthRest"}}'>
        <label>{{system.attributes.healthRest}}</label>
    </i>
{{/if}}
{{#if (ne system.attributes.staminaRest 0)}}
    <i class="far fa-wave-pulse hover-info" data-tooltip='{{localize "PL1E.StaminaRest"}}'>
        <label>{{system.attributes.staminaRest}}</label>
    </i>
{{/if}}
{{#if (ne system.attributes.manaRest 0)}}
    <i class="far fa-sparkles hover-info" data-tooltip='{{localize "PL1E.ManaRest"}}'>
        <label>{{system.attributes.manaRest}}</label>
    </i>
{{/if}}
{{#if (or (eq @root.actor.type "character") @root.item)}}
    {{#if (gt system.attributes.goldPrice 0)}}
        <i class="far fa-coins color-gold hover-info" data-tooltip="{{localize "PL1E.Gold"}}">
            <label>{{system.attributes.goldPrice}}</label>
        </i>
    {{/if}}
    {{#if (gt system.attributes.silverPrice 0)}}
        <i class="far fa-coins color-silver hover-info" data-tooltip="{{localize "PL1E.Silver"}}">
            <label>{{system.attributes.silverPrice}}</label>
        </i>
    {{/if}}
    {{#if (gt system.attributes.copperPrice 0)}}
        <i class="far fa-coins color-copper hover-info" data-tooltip="{{localize "PL1E.Copper"}}">
            <label>{{system.attributes.copperPrice}}</label>
        </i>
    {{/if}}
{{else if (eq @root.actor.type "merchant")}}
    {{#with (lookup @root.merchantPrices _id)}}
        {{#if (gt gold 0)}}
            <i class="far fa-coins color-gold hover-info" data-tooltip='{{localize "PL1E.Gold"}}'>
                <label>{{gold}}</label>
            </i>
        {{/if}}
        {{#if (gt silver 0)}}
            <i class="far fa-coins color-silver hover-info" data-tooltip='{{localize "PL1E.Silver"}}'>
                <label>{{silver}}</label>
            </i>
        {{/if}}
        {{#if (gt copper 0)}}
            <i class="far fa-coins color-copper hover-info" data-tooltip='{{localize "PL1E.Copper"}}'>
                <label>{{copper}}</label>
            </i>
        {{/if}}
    {{/with}}
{{/if}}