<form class="pl1e {{cssClass}} flexcol" autocomplete="off">
    {{!-- Sheet Header --}}
    <header class="sheet-header">
        <img class="profile" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
        <div class="header-fields">
            <h1 class="sheet-name"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
            <div class="resources grid grid-3col">
                {{#each system.price as |currency key|}}
                    <div class="resource box flex-group-center">
                        <div class="input-spin currency">
                            <i class="currency-icon fas fa-coins color-{{key}} hover-green" data-tooltip='{{localize currency.label}}'></i>
                            <input name="system.price.{{key}}.value" type="number" value="{{currency.value}}" data-dtype="Number" min="0" placeholder="0" disabled/>
                            {{#if ../game.user.isGM}}
                                <span>
                                    <i class="currency-control pointer fa fa-plus-square" data-currency="{{key}}" data-value="1"></i>
                                    <i class="currency-control pointer fa fa-minus-square" data-currency="{{key}}" data-value="-1"></i>
                                </span>
                            {{/if}}
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </header>
    {{#if game.user.isGM}}
    {{!-- Sheet Tab Navigation --}}
        <nav class="sheet-tabs tabs" data-group="primary">
            <a class="item" data-tab="description">{{localize "PL1E.Description"}}</a>
            <a class="item" data-tab="attributes">{{localize "PL1E.Attributes"}}</a>
            <a class="item" data-tab="linked-items">{{localize "PL1E.LinkedItems"}}</a>
        </nav>
        {{!-- Sheet Body --}}
        <section class="sheet-body">
            {{!-- Description Tab --}}
            <div class="tab description flexcol" data-group="primary" data-tab="description">
                {{> "systems/pl1e/templates/item/parts/item-description.hbs"}}
            </div>
            {{!-- Attributes Tab --}}
            <div class="tab attributes flexcol" data-group="primary" data-tab="attributes">
                {{> "systems/pl1e/templates/item/parts/item-attributes.hbs"}}
            </div>
            {{!-- Linked Items Tab --}}
            <div class="tab items flexcol" data-group="primary" data-tab="linked-items">
                {{> "systems/pl1e/templates/item/parts/item-linked.hbs"}}
            </div>
        </section>
    {{else}}
    {{!-- Sheet Body --}}
        <section class="sheet-body">
            <div class="tab flexcol">
                {{> "systems/pl1e/templates/item/parts/item-description.hbs"}}
            </div>
        </section>
    {{/if}}
</form>
