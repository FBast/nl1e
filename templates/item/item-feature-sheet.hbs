<form class="pl1e {{cssClass}} flexcol" autocomplete="off">
    {{!-- Sheet Header --}}
    <header class="sheet-header">
        <img class="profile" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
        <div class="header-fields">
            <h1 class="sheet-name"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
            <div class="resources flexrow">
                <div class="form-group box">
                    <select name="system.attributes.featureType">
                        {{selectOptions (config "featureTypes") selected=system.attributes.featureType localize=true}}
                    </select>
                </div>
                {{#if (eq system.attributes.featureType "trait")}}
                    <div class="form-group box">
                        <label>{{localize "PL1E.Cost"}}</label>
                        <input type="number" step="1" min="-5" max="5" name="system.attributes.cost"
                               value="{{system.attributes.cost}}" data-dtype="Number"/>
                    </div>
                {{/if}}
            </div>
        </div>
    </header>
    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="description">{{localize "PL1E.Description"}}</a>
        <a class="item" data-tab="attributes">{{localize "PL1E.Attributes"}}</a>
        <a class="item" data-tab="linked-items">{{localize "PL1E.LinkedItems"}}</a>
    </nav>
    {{!-- Sheet Body --}}
    <section class="sheet-body">
        {{!-- Description Tab --}}
        <div class="tab description flexcol" data-group="primary" data-tab="description">
            {{> "systems/pl1e/templates/item/parts/item-description.hbs"}}
        </div>
        {{!-- Attributes Tab --}}
        <div class="tab attributes flexcol" data-group="primary" data-tab="attributes">
            {{> "systems/pl1e/templates/item/parts/feature-attributes.hbs"}}
        </div>
        {{!-- Linked Items Tab --}}
        <div class="tab items flexcol" data-group="primary" data-tab="linked-items">
            {{> "systems/pl1e/templates/item/parts/item-linked.hbs"}}
        </div>
    </section>
</form>
