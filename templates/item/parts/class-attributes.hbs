<div class="list-fields">
    <div class="list-header">
        <h4>{{localize "PL1E.Attributes"}}</h4>
    </div>

    <div class="list-column">
        <div class="field">
            <div class="field-content">
                <div class="title">
                    <label>{{localize "PL1E.Description"}}</label>
                </div>
                <div class="fields">
                    <button class="launch-text-editor" data-target="system.description">
                        <i class="fas fa-edit"></i> {{localize "PL1E.EditDescription"}}
                    </button>
                </div>
            </div>
        </div>

        <div class="field">
            <div class="field-content">
                <div class="title">
                    <label>{{localize "PL1E.ClassType"}}</label>
                </div>
                <div class="fields">
                    <select name="system.attributes.classType">
                        {{customSelectOptions (config "classTypes") selected=system.attributes.classType localize=true}}
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>

