{{#each system.attributes as |attributeGroup groupId|}}
    <button type="button" class="collapsible">{{localize (configEntry "groups" groupId)}}</button>
    <div class="content">
    {{#each attributeGroup as |attribute id|}}
        <div class="form-group">
            <input type="checkbox" name="system.attributes.{{groupId}}.{{id}}.apply" {{checked attribute.apply}} >
            <label>{{localize attribute.label}}</label>
            {{#if (eq attribute.type "number")}}
                <input type="text" name="system.attributes.{{groupId}}.{{id}}.value" value="{{attribute.value}}" data-dtype="Number"/>
            {{else if (eq attribute.type "bool")}}
                <input type="checkbox" name="system.attributes.{{groupId}}.{{id}}.value" value="{{attribute.value}}" {{checked attribute.value}} data-dtype="Boolean"/>
            {{else if (eq attribute.type "select")}}
                <select name="system.attributes.{{groupId}}.{{id}}.value">
                    {{selectOptions (config attribute.select) selected=attribute.value localize=true}}
                </select>
            {{/if}}
        </div>
    {{/each}}
    </div>
{{/each}}