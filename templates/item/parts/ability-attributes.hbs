<section class="scroll-auto">
    <fieldset>
        <legend class="section-header">
            <i class="item-info far fa-circle-question hover-green" data-tooltip='{{localize "PL1E.TooltipLegendParent"}}'></i>
            {{localize "PL1E.Parent"}}
        </legend>
        <div class="item-attribute flexrow">
            <label class="attribute-name">
                <i class="item-info far fa-circle-question hover-green" data-tooltip='{{localize "PL1E.TooltipRequireParentMastery"}}'></i>
                {{localize "PL1E.RequireParentMastery"}}
            </label>
            <input type="checkbox" name="system.attributes.requireParentMastery" {{checked system.attributes.requireParentMastery}} data-dtype="Boolean"/>
        </div>
        <div class="item-attribute flexrow">
            <label class="attribute-name">
                <i class="item-info far fa-circle-question hover-green" data-tooltip='{{localize "PL1E.TooltipLaunchParentActiveAspects"}}'></i>
                {{localize "PL1E.LaunchParentActiveAspects"}}
            </label>
            <input type="checkbox" name="system.attributes.launchParentActiveAspects" {{checked system.attributes.launchParentActiveAspects}} data-dtype="Boolean"/>
        </div>
        <div class="item-attribute flexrow">
            <label class="attribute-name">
                <i class="item-info far fa-circle-question hover-green" data-tooltip='{{localize "PL1E.TooltipRangeOverride"}}'></i>
                {{localize "PL1E.RangeOverride"}}
            </label>
            <select name="system.attributes.rangeOverride">
                {{selectOptions (config "rangeOverrides") selected=system.attributes.rangeOverride localize=true}}
            </select>
        </div>
    </fieldset>
    <fieldset>
        <legend class="section-header">{{localize "PL1E.Usage"}}</legend>
        <div class="item-attribute flexrow">
            <label class="attribute-name">{{localize "PL1E.CharacterRoll"}}</label>
            <ul class="attribute-name">
                {{#each system.attributes.characterRoll}}
                    <li class="tag {{this}}">{{localize (config "abilitySkills" this)}}</li>
                {{/each}}
            </ul>
            <a class="trait-selector flexshrink" data-trait="abilitySkills" data-trait-label="PL1E.CharacterRoll" data-key-path="attributes.characterRoll"
               data-tooltip="{{localize 'PL1E.CharacterRollConfig'}}">
                <i class="fas fa-edit"></i>
            </a>
        </div>
        {{#if (gt (length system.attributes.characterRoll) 0)}}
            <div class="item-attribute flexrow">
                <label class="attribute-name">{{localize "PL1E.CharacterRollAdvantages"}}</label>
                <input type="number" name="system.attributes.characterRollAdvantages" value="{{system.attributes.characterRollAdvantages}}" data-dtype="Number"/>
            </div>
            <div class="item-attribute flexrow">
                <label class="attribute-name">{{localize "PL1E.TargetRoll"}}</label>
                <ul class="attribute-name">
                    {{#each system.attributes.targetRoll}}
                        <li class="tag {{this}}">{{localize (config "abilityResistances" this)}}</li>
                    {{/each}}
                </ul>
                <a class="trait-selector flexshrink" data-trait="abilityResistances" data-trait-label="PL1E.TargetRoll" data-key-path="attributes.targetRoll"
                   data-tooltip="{{localize 'PL1E.TargetRollConfig'}}">
                    <i class="fas fa-edit"></i>
                </a>
            </div>
            {{#if (gt (length system.attributes.targetRoll) 0)}}
                <div class="item-attribute flexrow">
                    <label class="attribute-name">{{localize "PL1E.TargetRollAdvantages"}}</label>
                    <input type="number" name="system.attributes.targetRollAdvantages" value="{{system.attributes.targetRollAdvantages}}" data-dtype="Number"/>
                </div>
            {{/if}}
        {{/if}}
        <div class="item-attribute flexrow">
            <label class="attribute-name">{{localize "PL1E.HealthCost"}}</label>
            <input type="number" name="system.attributes.healthCost" value="{{system.attributes.healthCost}}" data-dtype="Number"/>
        </div>
        <div class="item-attribute flexrow">
            <label class="attribute-name">{{localize "PL1E.StaminaCost"}}</label>
            <input type="number" name="system.attributes.staminaCost" value="{{system.attributes.staminaCost}}" data-dtype="Number"/>
        </div>
        <div class="item-attribute flexrow">
            <label class="attribute-name">{{localize "PL1E.ManaCost"}}</label>
            <input type="number" name="system.attributes.manaCost" value="{{system.attributes.manaCost}}" data-dtype="Number"/>
        </div>
        <div class="item-attribute flexrow">
            <label class="attribute-name">{{localize "PL1E.UsageCost"}}</label>
            <input type="number" name="system.attributes.usageCost" value="{{system.attributes.usageCost}}" data-dtype="Number"/>
        </div>
    </fieldset>
    <fieldset>
        <legend class="section-header">{{localize "PL1E.Activation"}}</legend>
        <div class="item-attribute flexrow">
            <label class="attribute-name">{{localize "PL1E.Activation"}}</label>
            <select name="system.attributes.activation">
                {{selectOptions (config "activations") selected=system.attributes.activation localize=true}}
            </select>
        </div>
        {{#if (eq system.attributes.activation "action")}}
            <div class="item-attribute flexrow">
                <label class="attribute-name">{{localize "PL1E.ActionCost"}}</label>
                <input type="number" name="system.attributes.actionCost" value="{{system.attributes.actionCost}}" data-dtype="Number"/>
            </div>
            <div class="item-attribute flexrow">
                <label class="attribute-name">{{localize "PL1E.IsMajorAction"}}</label>
                <input type="checkbox" name="system.attributes.isMajorAction" {{checked system.attributes.isMajorAction}} data-dtype="Boolean"/>
            </div>
            <div class="item-attribute flexrow">
                <label class="attribute-name">{{localize "PL1E.TriggerReactions"}}</label>
                <input type="checkbox" name="system.attributes.triggerReactions" {{checked system.attributes.triggerReactions}} data-dtype="Boolean"/>
            </div>
        {{else if (eq system.attributes.activation "reaction")}}
            <div class="item-attribute flexrow">
                <label class="attribute-name">{{localize "PL1E.ReactionCost"}}</label>
                <input type="number" name="system.attributes.reactionCost" value="1" data-dtype="Number" disabled/>
            </div>
        {{/if}}
    </fieldset>
    <fieldset>
        <legend class="section-header">{{localize "PL1E.Target"}}</legend>
        <div class="item-attribute flexrow">
            <label class="attribute-name">{{localize "PL1E.AreaShape"}}</label>
            <select name="system.attributes.areaShape">
                {{selectOptions (config "areaShapes") selected=system.attributes.areaShape localize=true}}
            </select>
        </div>
        {{#if (ne system.attributes.areaShape "self")}}
            <div class="item-attribute flexrow">
                <label class="attribute-name">{{localize "PL1E.Range"}}</label>
                <input type="number" name="system.attributes.range" value="{{system.attributes.range}}" data-dtype="Number"/>
                {{#if (ne (length system.attributes.characterRoll) 0)}}
                    <select name="system.attributes.rangeResolutionType">
                        {{selectOptions (config "resolutionTypes") selected=system.attributes.rangeResolutionType localize=true}}
                    </select>
                {{/if}}
            </div>
            <div class="item-attribute flexrow">
                <label class="attribute-name">{{localize "PL1E.AreaNumber"}}</label>
                <input type="number" name="system.attributes.areaNumber" value="{{system.attributes.areaNumber}}" data-dtype="Number"/>
                {{#if (ne system.attributes.characterRoll "none")}}
                    <select name="system.attributes.areaNumberResolutionType">
                        {{selectOptions (config "resolutionTypes") selected=system.attributes.areaNumberResolutionType localize=true}}
                    </select>
                {{/if}}
            </div>
            {{#if (eq system.attributes.areaShape "circle")}}
                <div class="item-attribute flexrow">
                    <label class="attribute-name">{{localize "PL1E.CircleRadius"}}</label>
                    <input type="number" name="system.attributes.circleRadius" value="{{system.attributes.circleRadius}}" data-dtype="Number"/>
                    {{#if (ne system.attributes.characterRoll "none")}}
                        <select name="system.attributes.circleRadiusResolutionType">
                            {{selectOptions (config "resolutionTypes") selected=system.attributes.circleRadiusResolutionType localize=true}}
                        </select>
                    {{/if}}
                </div>
            {{else if (eq system.attributes.areaShape "cone")}}
                <div class="item-attribute flexrow">
                    <label class="attribute-name">{{localize "PL1E.ConeLength"}}</label>
                    <input type="number" name="system.attributes.coneLength" value="{{system.attributes.coneLength}}" data-dtype="Number"/>
                    {{#if (ne system.attributes.characterRoll "none")}}
                        <select name="system.attributes.coneLengthResolutionType">
                            {{selectOptions (config "resolutionTypes") selected=system.attributes.coneLengthResolutionType localize=true}}
                        </select>
                    {{/if}}
                </div>
                <div class="item-attribute flexrow">
                    <label class="attribute-name">{{localize "PL1E.ConeAngle"}}</label>
                    <input type="number" name="system.attributes.coneAngle" value="{{system.attributes.coneAngle}}" data-dtype="Number"/>
                    <select name="system.attributes.coneAngleResolutionType">
                        {{selectOptions (config "resolutionTypes") selected=system.attributes.coneAngleResolutionType localize=true}}
                    </select>
                </div>
            {{else if (eq system.attributes.areaShape "square")}}
                    <div class="item-attribute flexrow">
                        <label class="attribute-name">{{localize "PL1E.SquareLength"}}</label>
                        <input type="number" name="system.attributes.squareLength" value="{{system.attributes.squareLength}}" data-dtype="Number"/>
                        {{#if (ne system.attributes.characterRoll "none")}}
                            <select name="system.attributes.squareLengthResolutionType">
                                {{selectOptions (config "resolutionTypes") selected=system.attributes.squareLengthResolutionType localize=true}}
                            </select>
                        {{/if}}
                    </div>
            {{else if (eq system.attributes.areaShape "ray")}}
                <div class="item-attribute flexrow">
                    <label class="attribute-name">{{localize "PL1E.RayLength"}}</label>
                    <input type="number" name="system.attributes.rayLength" value="{{system.attributes.rayLength}}" data-dtype="Number"/>
                    {{#if (ne system.attributes.characterRoll "none")}}
                        <select name="system.attributes.rayLengthResolutionType">
                            {{selectOptions (config "resolutionTypes") selected=system.attributes.rayLengthResolutionType localize=true}}
                        </select>
                    {{/if}}
                </div>
            {{/if}}
            {{#if (and (ne system.attributes.areaShape "target") (ne system.attributes.areaShape "self"))}}
                <div class="item-attribute flexrow">
                    <label class="attribute-name">{{localize "PL1E.ExcludeSelf"}}</label>
                    <input type="checkbox" name="system.attributes.excludeSelf" {{checked system.attributes.excludeSelf}} data-dtype="Boolean"/>
                </div>
            {{/if}}
        {{/if}}
        {{#if (ne system.attributes.areaShape "self")}}
            <div class="item-attribute flexrow">
                <label class="attribute-name">{{localize "PL1E.IncludeSelf"}}</label>
                <input type="checkbox" name="system.attributes.includeSelf" {{checked system.attributes.includeSelf}} data-dtype="Boolean"/>
            </div>
        {{/if}}
    </fieldset>
    <fieldset>
        <legend class="section-header">{{localize "PL1E.ModificationMacros"}}</legend>
        <div class="item-attribute flexrow">
            <label class="attribute-name">{{localize "PL1E.ActorUpdateMacro"}}</label>
            <select name="system.attributes.actorUpdateMacro">
                {{selectOptions modificationMacros selected=system.attributes.actorUpdateMacro localize=true}}
            </select>
        </div>
    </fieldset>
    <fieldset>
        <legend class="section-header">{{localize "PL1E.SequencerMacros"}}</legend>
        <div class="item-attribute flexrow">
            <label class="attribute-name">{{localize "PL1E.ActivationMacro"}}</label>
            <select name="system.attributes.activationMacro">
                {{selectOptions sequencerMacros selected=system.attributes.activationMacro localize=true}}
            </select>
        </div>
        <div class="item-attribute flexrow">
            <label class="attribute-name">{{localize "PL1E.PreLaunchMacro"}}</label>
            <select name="system.attributes.preLaunchMacro">
                {{selectOptions sequencerMacros selected=system.attributes.preLaunchMacro localize=true}}
            </select>
        </div>
        <div class="item-attribute flexrow">
            <label class="attribute-name">{{localize "PL1E.PostLaunchMacro"}}</label>
            <select name="system.attributes.postLaunchMacro">
                {{selectOptions sequencerMacros selected=system.attributes.postLaunchMacro localize=true}}
            </select>
        </div>
    </fieldset>
    {{> "systems/pl1e/templates/item/components/item-aspects-passives.hbs"}}
    {{> "systems/pl1e/templates/item/components/item-aspects-actives.hbs"}}
</section>