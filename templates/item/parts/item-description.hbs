{{#each system.attributes as |attributeGroup groupId|}}
    {{#if (ne (count attributeGroup "apply" true) 0)}}
    <button type="button" data-toggle="collapse" data-target="#{{groupId}}" aria-expanded="false" aria-controls="{{groupId}}">
        {{localize (configEntry "groups" groupId)}}
    </button>
    <div class="collapse" id="{{groupId}}">
        {{#each attributeGroup as |attribute id|}}
            {{#if attribute.apply}}
                <div class="form-group">
                    <label>{{localize attribute.label}}</label>
                    {{#if (eq attribute.type "number")}}
                        <label class="align-right">{{attribute.value}}</label>
                    {{else if (eq attribute.type "bool")}}
                    {{else if (eq attribute.type "select")}}
                        <label class="align-right">{{localize (configEntry attribute.select attribute.value)}}</label>
                    {{/if}}
                </div>
            {{/if}}
        {{/each}}
    </div>
    {{/if}}
{{/each}}
<ul class="traits-list">
    {{#each abilities as |abilities level|}}
        {{#each abilities as |item id|}}
            <li class="tag {{id}}"><a>{{level }} {{item.name}}</a></li>
        {{/each}}
    {{/each}}
</ul>
{{editor system.description target="system.description" rollData=rollData button=true owner=owner editable=editable}}