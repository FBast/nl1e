<section class="scroll-auto">
    <ul class="traits-list">
        {{#each abilities as |abilities level|}}
            {{#each abilities}}
                <li class="item item-edit tag" data-item-id="{{this._id}}">
                    <a>{{this.name}} ({{level}})</a>
                </li>
            {{/each}}
        {{/each}}
        {{#each features}}
            <li class="item item-edit tag" data-item-id="{{this._id}}">
                <a>{{this.name}}</a>
            </li>
        {{/each}}
    </ul>
    <hr>
    {{editor system.description target="system.description" rollData=rollData
             button=true owner=owner editable=editable engine="prosemirror"}}
</section>