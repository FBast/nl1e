<div>
    {{{enriched}}}
</div>

{{#unless (isEmpty attributesDisplay)}}
    <div class="list-items">
        <div class="list-header">
            <h4>{{localize "PL1E.Attributes"}}</h4>
        </div>
        <div class="list-column">
            {{#each attributesDisplay}}
                <div class="item dashed">
                    <div class="item-content">
                        <div class="title">
                            <label>{{label}}</label>
                        </div>
                        <label class="value">{{value}}</label>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
{{/unless}}

