<section class="scroll-auto">
    <fieldset>
        <legend class="section-header">{{localize "PL1E.Attributes"}}</legend>
        <div class="form-group">
            <label>{{localize "PL1E.Description"}}</label>
            <button class="launch-text-editor" data-target="system.description">
                <i class="fas fa-edit"></i> {{localize "PL1E.EditDescription"}}
            </button>
        </div>
        <div class="form-group">
            <label>
                {{localize "PL1E.GoldPrice"}}
                <input type="number" name="system.attributes.goldPrice" value="{{system.attributes.goldPrice}}"
                       data-dtype="Number"/>
            </label>
            <label>
                {{localize "PL1E.SilverPrice"}}
                <input type="number" name="system.attributes.silverPrice" value="{{system.attributes.silverPrice}}"
                       data-dtype="Number"/>
            </label>
            <label>
                {{localize "PL1E.CopperPrice"}}
                <input type="number" name="system.attributes.copperPrice" value="{{system.attributes.copperPrice}}"
                       data-dtype="Number"/>
            </label>
        </div>
    </fieldset>
    <fieldset>
        <legend class="section-header">{{localize "PL1E.Weapon"}}</legend>
        <div class="form-group">
            <label>{{localize "PL1E.Customizable"}}</label>
            <input type="checkbox" name="system.attributes.customizable" {{checked system.attributes.customizable}}
                   data-dtype="Boolean"/>
        </div>
        <div class="form-group">
            <label>{{localize "PL1E.Modules"}}</label>
            <input type="number" name="system.attributes.modules" value="{{system.attributes.modules}}"
                   data-dtype="Number"/>
        </div>
        <div class="form-group">
            <label>{{localize "PL1E.Hands"}}</label>
            <input type="number" name="system.attributes.hands" value="{{system.attributes.hands}}"
                   data-dtype="Number"/>
        </div>
        <div class="form-group">
            <label>{{localize "PL1E.Uses"}}</label>
            <input type="number" name="system.attributes.uses" value="{{system.attributes.uses}}" data-dtype="Number"/>
        </div>
        <div class="form-group">
            <label>{{localize "PL1E.MeleeUse"}}</label>
            <input type="checkbox" name="system.attributes.meleeUse" {{checked system.attributes.meleeUse}}
                   data-dtype="Boolean"/>
        </div>
        <div class="form-group">
            <label>{{localize "PL1E.RangedUse"}}</label>
            <input type="checkbox" name="system.attributes.rangedUse" {{checked system.attributes.rangedUse}}
                   data-dtype="Boolean"/>
        </div>
        <div class="form-group">
            <label>{{localize "PL1E.MagicUse"}}</label>
            <input type="checkbox" name="system.attributes.magicUse" {{checked system.attributes.magicUse}}
                   data-dtype="Boolean"/>
        </div>
    </fieldset>
    {{#if system.attributes.meleeUse}}
        <fieldset>
            <legend class="section-header">{{localize "PL1E.Melee"}}</legend>
            <div class="form-group">
                <label>{{localize "PL1E.Reach"}}</label>
                <input type="number" name="system.attributes.reach" value="{{system.attributes.reach}}"
                       data-dtype="Number"/>
            </div>
            <div class="form-group">
                <label>{{localize "PL1E.MeleeRoll"}}</label>
                <div class="form-fields">
                    <ul>
                        {{#each system.attributes.meleeRoll}}
                            <li class="tag {{this}}">{{localize (config "abilitySkills" this)}}</li>
                        {{/each}}
                    </ul>
                    <a style="flex: 0;" class="trait-selector flex-shrink" data-trait="abilitySkills"
                       data-trait-label="PL1E.MeleeRoll" data-key-path="attributes.meleeRoll"
                       data-tooltip="{{localize 'PL1E.MeleeRollConfig'}}">
                        <i class="fas fa-edit"></i>
                    </a>
                </div>
            </div>
            {{#if (gt system.attributes.meleeRoll.length 0)}}
                <div class="form-group">
                    <label>{{localize "PL1E.MeleeOppositeRoll"}}</label>
                    <div class="form-fields">
                        <ul>
                            {{#each system.attributes.meleeOppositeRoll}}
                                <li class="tag {{this}}">{{localize (config "abilityResistances" this)}}</li>
                            {{/each}}
                        </ul>
                        <a style="flex: 0;" class="trait-selector flex-shrink" data-trait="abilityResistances"
                           data-trait-label="PL1E.MeleeOppositeRoll" data-key-path="attributes.meleeOppositeRoll"
                           data-tooltip="{{localize 'PL1E.MeleeOppositeRollConfig'}}">
                            <i class="fas fa-edit"></i>
                        </a>
                    </div>
                </div>
            {{/if}}
            <div class="form-group">
                <label>{{localize "PL1E.MeleeActivationMacro"}}</label>
                <select name="system.attributes.meleeActivationMacro">
                    {{customSelectOptions (config "sequencerMacros") selected=system.attributes.meleeActivationMacro
                                          localize=true}}
                </select>
            </div>
            <div class="form-group">
                <label>{{localize "PL1E.MeleePreLaunchMacro"}}</label>
                <select name="system.attributes.meleePreLaunchMacro">
                    {{customSelectOptions (config "sequencerMacros") selected=system.attributes.meleePreLaunchMacro
                                          localize=true}}
                </select>
            </div>
            <div class="form-group">
                <label>{{localize "PL1E.MeleePostLaunchMacro"}}</label>
                <select name="system.attributes.meleePostLaunchMacro">
                    {{customSelectOptions (config "sequencerMacros") selected=system.attributes.meleePostLaunchMacro
                                          localize=true}}
                </select>
            </div>
        </fieldset>
    {{/if}}
    {{#if system.attributes.rangedUse}}
        <fieldset>
            <legend class="section-header">{{localize "PL1E.Ranged"}}</legend>
            <div class="form-group">
                <label>{{localize "PL1E.Range"}}</label>
                <input type="number" name="system.attributes.range" value="{{system.attributes.range}}"
                       data-dtype="Number"/>
            </div>
            <div class="form-group">
                <label>{{localize "PL1E.RangeRoll"}}</label>
                <div class="form-fields">
                    <ul>
                        {{#each system.attributes.rangeRoll}}
                            <li class="tag {{this}}">{{localize (config "abilitySkills" this)}}</li>
                        {{/each}}
                    </ul>
                    <a style="flex: 0;" class="trait-selector flex-shrink" data-trait="abilitySkills"
                       data-trait-label="PL1E.RangeRoll" data-key-path="attributes.rangeRoll"
                       data-tooltip="{{localize 'PL1E.RangeRollConfig'}}">
                        <i class="fas fa-edit"></i>
                    </a>
                </div>
            </div>
            {{#if (gt system.attributes.rangeRoll.length 0)}}
                <div class="form-group">
                    <label>{{localize "PL1E.RangeOppositeRoll"}}</label>
                    <div class="form-fields">
                        <ul>
                            {{#each system.attributes.rangeOppositeRoll}}
                                <li class="tag {{this}}">{{localize (config "abilityResistances" this)}}</li>
                            {{/each}}
                        </ul>
                        <a style="flex: 0;" class="trait-selector flex-shrink" data-trait="abilityResistances"
                           data-trait-label="PL1E.RangeOppositeRoll" data-key-path="attributes.rangeOppositeRoll"
                           data-tooltip="{{localize 'PL1E.RangeOppositeRollConfig'}}">
                            <i class="fas fa-edit"></i>
                        </a>
                    </div>
                </div>
            {{/if}}
            <div class="form-group">
                <label>{{localize "PL1E.RangeActivationMacro"}}</label>
                <select name="system.attributes.rangeActivationMacro">
                    {{customSelectOptions (config "sequencerMacros") selected=system.attributes.rangeActivationMacro
                                          localize=true}}
                </select>
            </div>
            <div class="form-group">
                <label>{{localize "PL1E.RangePreLaunchMacro"}}</label>
                <select name="system.attributes.rangePreLaunchMacro">
                    {{customSelectOptions (config "sequencerMacros") selected=system.attributes.rangePreLaunchMacro
                                          localize=true}}
                </select>
            </div>
            <div class="form-group">
                <label>{{localize "PL1E.RangePostLaunchMacro"}}</label>
                <select name="system.attributes.rangePostLaunchMacro">
                    {{customSelectOptions (config "sequencerMacros") selected=system.attributes.rangePostLaunchMacro
                                          localize=true}}
                </select>
            </div>
        </fieldset>
    {{/if}}
    {{#if system.attributes.magicUse}}
        <fieldset>
            <legend class="section-header">{{localize "PL1E.Magic"}}</legend>
            <div class="form-group">
                <label>{{localize "PL1E.MagicRoll"}}</label>
                <div class="form-fields">
                    <ul>
                        {{#each system.attributes.magicRoll}}
                            <li class="tag {{this}}">{{localize (config "abilitySkills" this)}}</li>
                        {{/each}}
                    </ul>
                    <a style="flex: 0;" class="trait-selector flex-shrink" data-trait="abilitySkills"
                       data-trait-label="PL1E.MagicRoll" data-key-path="attributes.magicRoll"
                       data-tooltip="{{localize 'PL1E.MagicRollConfig'}}">
                        <i class="fas fa-edit"></i>
                    </a>
                </div>
            </div>
            {{#if (gt system.attributes.magicRoll.length 0)}}
                <div class="form-group">
                    <label>{{localize "PL1E.MagicOppositeRoll"}}</label>
                    <div class="form-fields">
                        <ul>
                            {{#each system.attributes.magicOppositeRoll}}
                                <li class="tag {{this}}">{{localize (config "abilityResistances" this)}}</li>
                            {{/each}}
                        </ul>
                        <a style="flex: 0;" class="trait-selector flex-shrink" data-trait="abilityResistances"
                           data-trait-label="PL1E.MagicOppositeRoll" data-key-path="attributes.magicOppositeRoll"
                           data-tooltip="{{localize 'PL1E.MagicOppositeRollConfig'}}">
                            <i class="fas fa-edit"></i>
                        </a>
                    </div>
                </div>
            {{/if}}
            <div class="form-group">
                <label>{{localize "PL1E.MagicActivationMacro"}}</label>
                <select name="system.attributes.magicActivationMacro">
                    {{customSelectOptions (config "sequencerMacros") selected=system.attributes.magicActivationMacro
                                          localize=true}}
                </select>
            </div>
            <div class="form-group">
                <label>{{localize "PL1E.MagicPreLaunchMacro"}}</label>
                <select name="system.attributes.magicPreLaunchMacro">
                    {{customSelectOptions (config "sequencerMacros") selected=system.attributes.magicPreLaunchMacro
                                          localize=true}}
                </select>
            </div>
            <div class="form-group">
                <label>{{localize "PL1E.MagicPostLaunchMacro"}}</label>
                <select name="system.attributes.magicPostLaunchMacro">
                    {{customSelectOptions (config "sequencerMacros") selected=system.attributes.magicPostLaunchMacro
                                          localize=true}}
                </select>
            </div>
        </fieldset>
    {{/if}}
    {{> "systems/pl1e/templates/item/components/item-aspects-passives.hbs"}}
    {{> "systems/pl1e/templates/item/components/item-aspects-actives.hbs"}}
</section>