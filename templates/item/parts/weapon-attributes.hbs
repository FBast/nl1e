{{#if system.attributes.meleeUse}}
    <div class="list-items">
        <div class="list-header">
            <h4>{{localize "PL1E.Melee"}}</h4>
        </div>
        <div class="list-column">
            <div class="item">
                <div class="item-content">
                    <div class="title">
                        <label>{{localize "PL1E.Reach"}}</label>
