<div class="list-items">
    <div class="list-header">
        <h4>{{localize "PL1E.Attributes"}}</h4>
    </div>

    <div class="list-column">
        <div class="item">
            <div class="item-content">
                <div class="title">
                    <label>{{localize "PL1E.Description"}}</label>
                </div>
                <div class="fields">
                    <button class="launch-text-editor" data-target="system.description">
                        <i class="fas fa-edit"></i> {{localize "PL1E.EditDescription"}}
                    </button>
                </div>
            </div>
        </div>

        <div class="item">
            <div class="item-content">
                <div class="title">
                    <label>{{localize "PL1E.Type"}}</label>
                </div>
                <div class="fields">
                    <select name="system.attributes.featureType">
                        {{customSelectOptions (config "featureTypes") selected=system.attributes.featureType localize=true}}
                    </select>
                </div>
            </div>
        </div>

        <div class="item">
            <div class="item-content">
                <div class="title">
                    <label>{{localize "PL1E.Points"}}</label>
                </div>
                <div class="fields">
                    <input type="number" step="1" min="-5" max="5" name="system.attributes.points"
                           value="{{system.attributes.points}}" data-dtype="Number"/>
                </div>
            </div>
        </div>
    </div>
</div>

{{> "systems/pl1e/templates/item/parts/item-aspects-passives.hbs"}}
