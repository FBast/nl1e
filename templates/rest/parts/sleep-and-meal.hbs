<!-- Environment Section -->
<div class="toggle-section">
    <div class="list-header">
        <h4 class="header-title">
            {{localize "PL1E.Environment"}}
            <i class="fas fa-question-circle help-icon hover-info" data-tooltip="{{localize 'PL1E.EnvironmentTooltip'}}"></i>
        </h4>
    </div>
    <div class="toggle-group environment-toggle" style="--toggle-columns: 4;">
        {{#each environments}}
            <div class="toggle-item {{#if (eq ../selectedEnvironment @key)}}selected{{/if}}" data-value="{{@key}}" data-tooltip="{{localize this.tooltip}}">
                <img src="{{this.img}}" alt="{{this.tooltip}}" />
            </div>
        {{/each}}
    </div>
</div>

