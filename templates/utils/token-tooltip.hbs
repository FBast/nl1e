<div class="placeable-tooltip-content">
    <h3>{{name}}</h3>
    <h4>{{localize "PL1E.Weapons"}}</h4>
    {{#if weapons.length}}
        <div class="tooltip-stats">
            {{#each weapons}}
                <div class="stat-row {{#if equipped}}equipped{{/if}}">
                    <img class="stat-img" src="{{img}}" alt="{{name}}" />
                    <i class="{{icon}} stat-icon"></i>
                    <span class="stat-label">{{name}}</span>
                </div>
            {{/each}}
        </div>
    {{else}}
        <span class="no-value">{{localize "PL1E.None.F"}}</span>
    {{/if}}

    <h4>{{localize "PL1E.Defenses"}}</h4>
    <div class="tooltip-stats">
        {{#each defenses}}
            <div class="stat-row">
                <span class="stat-value">{{rank}}</span>
                <i class="{{icon}} stat-icon"></i>
                <span class="stat-label">{{localize label}}</span>
            </div>
        {{/each}}
    </div>

    <h4>{{localize "PL1E.Resistances"}}</h4>
    {{#if resistances.length}}
        <div class="tooltip-stats">
            {{#each resistances}}
                <div class="stat-row">
                    <span class="stat-value">{{#if (isInfinite value)}}âˆž{{else}}{{value}}{{/if}}</span>
                    <i class="{{icon}} stat-icon"></i>
                    <span class="stat-label">{{label}}</span>
                </div>
            {{/each}}
        </div>
    {{else}}
        <span class="no-value">{{localize "PL1E.None.F"}}</span>
    {{/if}}

    <h4>{{localize "PL1E.Vulnerabilities"}}</h4>
    {{#if vulnerabilities.length}}
        <div class="tooltip-stats">
            {{#each vulnerabilities}}
                <div class="stat-row">
                    <span class="stat-value">{{value}}</span>
                    <i class="{{icon}} stat-icon"></i>
                    <span class="stat-label">{{label}}</span>
                </div>
            {{/each}}
        </div>
    {{else}}
        <span class="no-value">{{localize "PL1E.None.F"}}</span>
    {{/if}}
</div>
