<section class="placeable-tooltip-content">
    <h3>{{data.name}}</h3>

    {{#if (ne system.translation "")}}
        <p><strong>{{localize "PL1E.Translation"}}:</strong> {{system.translation}}</p>
    {{/if}}

    {{#if (ne system.type "")}}
        <p><strong>{{localize "PL1E.Type"}}:</strong> {{system.type}}</p>
    {{/if}}

    {{#if (ne system.culture "")}}
        <p><strong>{{localize "PL1E.Culture"}}:</strong> {{system.culture}}</p>
    {{/if}}

    {{#if (ne system.population 0)}}
        <p><strong>{{localize "PL1E.Population"}}:</strong>
            {{#range 1 9}}
                {{#if (lte this ../system.population)}}
                    <i class="fas fa-user"></i>
                {{/if}}
            {{/range}}
            ({{system.population}})
        </p>
    {{/if}}

    {{#if (ne system.dangerousness 0)}}
        <p><strong>{{localize "PL1E.Dangerousness"}}:</strong>
            {{#range 1 9}}
                {{#if (lte this ../system.dangerousness)}}
                    <i class="fas fa-skull"></i>
                {{/if}}
            {{/range}}
            ({{system.dangerousness}})
        </p>
    {{/if}}

    <div class="tooltip-body">
        {{{data.text.content}}}
    </div>
</section>